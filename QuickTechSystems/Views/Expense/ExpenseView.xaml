<UserControl x:Class="QuickTechSystems.WPF.Views.ExpenseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:QuickTechSystems.WPF.Converters"
             mc:Ignorable="d"
             x:Name="ExpenseViewRoot">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:DecimalConverter x:Key="DecimalConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding SelectedQuickFilter}" Value="{Binding Content, RelativeSource={RelativeSource Self}}">
                                <Setter Property="Background" Value="#3B82F6"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F9FAFB">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Expense Management" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#111827" 
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Track and manage all your business expenses" 
                                   FontSize="16" 
                                   Foreground="#6B7280"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Export" 
                                Command="{Binding ExportCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,0,12,0"
                                Height="36"/>
                        <Button Content="Refresh" 
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,0,12,0"
                                Height="36"/>
                        <Button Content="Add New Expense" 
                                Command="{Binding ClearCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Height="36"/>
                    </StackPanel>
                </Grid>

                <!-- Statistics Cards -->
                <Grid Grid.Row="1" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Expenses Card -->
                    <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Total Expenses" 
                                       FontSize="14" 
                                       Foreground="#6B7280" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalExpenseAmount, StringFormat=C2}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#111827"/>
                            <TextBlock Text="{Binding TotalExpenseCount, StringFormat='{}{0} transactions'}" 
                                       FontSize="12" 
                                       Foreground="#9CA3AF" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Average Expense Card -->
                    <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Average Expense" 
                                       FontSize="14" 
                                       Foreground="#6B7280" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding AverageExpenseAmount, StringFormat=C2}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#111827"/>
                            <TextBlock Text="per transaction" 
                                       FontSize="12" 
                                       Foreground="#9CA3AF" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- This Month Card -->
                    <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="This Month" 
                                       FontSize="14" 
                                       Foreground="#6B7280" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding ThisMonthExpenses, StringFormat=C2}" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#DC2626"/>
                            <TextBlock Text="monthly spending" 
                                       FontSize="12" 
                                       Foreground="#9CA3AF" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Top Category Card -->
                    <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Top Category" 
                                       FontSize="14" 
                                       Foreground="#6B7280" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TopCategory}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#111827"/>
                            <TextBlock Text="{Binding TopCategoryAmount, StringFormat=C2}" 
                                       FontSize="14" 
                                       Foreground="#059669" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Quick Filters -->
                <Border Grid.Row="2" 
                        Background="White" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Quick Filters" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#111827" 
                                   Margin="0,0,0,16"/>
                        <WrapPanel Orientation="Horizontal">
                            <Button Content="Today" 
                                    Command="{Binding QuickFilterCommand}" 
                                    CommandParameter="Today"
                                    Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="Yesterday" 
                                    Command="{Binding QuickFilterCommand}" 
                                    CommandParameter="Yesterday"
                                    Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="This Week" 
                                    Command="{Binding QuickFilterCommand}" 
                                    CommandParameter="This Week"
                                    Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="Last Week" 
                                    Command="{Binding QuickFilterCommand}" 
                                    CommandParameter="Last Week"
                                    Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="This Month" 
                                    Command="{Binding QuickFilterCommand}" 
                                    CommandParameter="This Month"
                                    Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="Last Month" 
                                    Command="{Binding QuickFilterCommand}" 
                                    CommandParameter="Last Month"
                                    Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="This Quarter" 
                                    Command="{Binding QuickFilterCommand}" 
                                    CommandParameter="This Quarter"
                                    Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="This Year" 
                                    Command="{Binding QuickFilterCommand}" 
                                    CommandParameter="This Year"
                                    Style="{StaticResource FilterButtonStyle}"/>
                            <Button Content="Custom" 
                                    Command="{Binding QuickFilterCommand}" 
                                    CommandParameter="Custom"
                                    Style="{StaticResource FilterButtonStyle}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Advanced Filters -->
                <Border Grid.Row="3" 
                        Background="White" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Advanced Filters" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#111827" 
                                   Margin="0,0,0,16"/>

                        <!-- Search and Category Row -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Search" 
                                           FontSize="14" 
                                           Foreground="#374151" 
                                           Margin="0,0,0,6"/>
                                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="36"
                                         Padding="12,8"
                                         BorderBrush="#D1D5DB"
                                         Background="White"
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Category" 
                                           FontSize="14" 
                                           Foreground="#374151" 
                                           Margin="0,0,0,6"/>
                                <ComboBox ItemsSource="{Binding Categories}"
                                         SelectedItem="{Binding SelectedCategory}"
                                         Height="36"
                                         Padding="12,8"
                                         BorderBrush="#D1D5DB"
                                         Background="White"
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Sort By" 
                                           FontSize="14" 
                                           Foreground="#374151" 
                                           Margin="0,0,0,6"/>
                                <ComboBox ItemsSource="{Binding SortOptions}"
                                         SelectedItem="{Binding SortBy}"
                                         Height="36"
                                         Padding="12,8"
                                         BorderBrush="#D1D5DB"
                                         Background="White"
                                         FontSize="14"/>
                            </StackPanel>
                        </Grid>

                        <!-- Date Range Row -->
                        <Grid Grid.Row="2" 
                              Visibility="{Binding IsCustomDateRange, Converter={StaticResource BoolToVisConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="From Date" 
                                           FontSize="14" 
                                           Foreground="#374151" 
                                           Margin="0,0,0,6"/>
                                <DatePicker SelectedDate="{Binding FilterStartDate}"
                                           Height="36"
                                           Padding="12,8"
                                           BorderBrush="#D1D5DB"
                                           Background="White"
                                           FontSize="14"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="To Date" 
                                           FontSize="14" 
                                           Foreground="#374151" 
                                           Margin="0,0,0,6"/>
                                <DatePicker SelectedDate="{Binding FilterEndDate}"
                                           Height="36"
                                           Padding="12,8"
                                           BorderBrush="#D1D5DB"
                                           Background="White"
                                           FontSize="14"/>
                            </StackPanel>

                            <CheckBox Grid.Column="4" 
                                      Content="Descending" 
                                      IsChecked="{Binding SortDescending}"
                                      VerticalAlignment="Bottom"
                                      Margin="0,0,0,8"
                                      FontSize="14"/>

                            <Button Grid.Column="6"
                                    Content="Apply Filters"
                                    Command="{Binding ApplyFilterCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    VerticalAlignment="Bottom"
                                    Height="36"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Data Grid -->
                <Border Grid.Row="4" 
                        Background="White" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Grid Header -->
                        <Border Grid.Row="0" 
                                Background="#F9FAFB" 
                                BorderBrush="#E5E7EB" 
                                BorderThickness="0,0,0,1" 
                                Padding="20,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding TotalExpenseCount, StringFormat='Showing {0} expenses'}" 
                                           FontSize="14" 
                                           Foreground="#6B7280"/>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding TotalExpenseAmount, StringFormat='Total: {0:C2}'}" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#111827"/>
                            </Grid>
                        </Border>

                        <!-- Data Grid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding FilteredExpenses}"
                                  SelectedItem="{Binding SelectedExpense}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  Background="White"
                                  BorderThickness="0"
                                  RowBackground="White"
                                  AlternatingRowBackground="#FAFAFA"
                                  FontSize="14"
                                  RowHeight="48"
                                  MouseDoubleClick="DataGrid_MouseDoubleClick">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#374151"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" 
                                                    Binding="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                                    Width="100"/>

                                <DataGridTextColumn Header="Description" 
                                                    Binding="{Binding Reason}" 
                                                    Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#111827"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Category" 
                                                    Binding="{Binding Category}" 
                                                    Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Background" Value="#EFF6FF"/>
                                            <Setter Property="Foreground" Value="#1E40AF"/>
                                            <Setter Property="Padding" Value="8,4"/>
                                            <Setter Property="TextAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Amount" 
                                                    Binding="{Binding Amount, StringFormat=C2}" 
                                                    Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#DC2626"/>
                                            <Setter Property="TextAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="Recurring" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding IsRecurring, Converter={StaticResource BooleanToBrushConverter}}"
                                                    CornerRadius="12"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding IsRecurring, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Yes|No'}"
                                                           Foreground="White"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           TextAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Actions" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="Edit"
                                                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource SecondaryButtonStyle}"
                                                        Width="50"
                                                        Height="28"
                                                        FontSize="11"
                                                        Margin="2"/>
                                                <Button Content="Delete"
                                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource SecondaryButtonStyle}"
                                                        Width="50"
                                                        Height="28"
                                                        FontSize="11"
                                                        Margin="2"
                                                        Foreground="#DC2626"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>

                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Edit Expense" Click="EditMenuItem_Click">
                                        <MenuItem.Icon>
                                            <TextBlock Text="✏️" FontSize="12"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator/>
                                    <MenuItem Header="Delete Expense" Click="DeleteMenuItem_Click">
                                        <MenuItem.Icon>
                                            <TextBlock Text="🗑️" FontSize="12"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Loading Overlay -->
                <Border Grid.Row="0" 
                        Grid.RowSpan="5" 
                        Background="#80000000" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        CornerRadius="8">
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <Border Background="White" 
                                CornerRadius="8" 
                                Padding="40,30">
                            <StackPanel HorizontalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" 
                                             Width="120" 
                                             Height="4"
                                             Margin="0,0,0,20"/>
                                <TextBlock Text="Processing..." 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="#374151"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>