<UserControl x:Class="QuickTechSystems.WPF.Views.Transaction.Components.ProductSummaryTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="White"
            BorderBrush="#E5E7EB"
            BorderThickness="1"
            CornerRadius="8"
            Padding="10"
            VerticalAlignment="Stretch">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Current Order" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="0,0,0,10"/>

            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding CurrentTransaction.Details}"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      BorderThickness="0"
                      IsReadOnly="True"
                      Background="Transparent"
                      HorizontalGridLinesBrush="#E5E7EB"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      SelectionChanged="DataGrid_SelectionChanged"
                      RowHeight="30"
                      MaxHeight="600">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" 
                                       Binding="{Binding ProductName, FallbackValue='[No name]'}" 
                                       Width="*"/>
                    <DataGridTextColumn Header="Qty" 
                                       Binding="{Binding Quantity, FallbackValue=0}" 
                                       Width="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5,5"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <EventSetter Event="MouseLeftButtonDown" Handler="Quantity_MouseLeftButtonDown"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Price" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding UnitPrice, StringFormat={}{0:C2}}"
                                        Click="PriceButton_Click"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        HorizontalAlignment="Right"
                                        Padding="5,5"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Total" 
                                       Binding="{Binding Total, StringFormat=C2, FallbackValue=$0.00}" 
                                       Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Right"/>
                                <Setter Property="Padding" Value="5,5"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Width="40">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✕"
                                        Command="{Binding DataContext.RemoveItemCommand, 
                                                 RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#EF4444"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Padding="5,0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#DC2626"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>