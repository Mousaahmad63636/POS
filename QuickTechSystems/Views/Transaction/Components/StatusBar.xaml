<UserControl x:Class="QuickTechSystems.WPF.Views.Transaction.Components.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StatusBar Background="#1E293B"
              Height="28">
        <StatusBarItem>
            <TextBlock Text="{Binding StatusMessage}"
                     Foreground="#94A3B8"/>
        </StatusBarItem>
        <Separator Background="#374151"/>
        <StatusBarItem>
            <TextBlock Text="{Binding ConnectionStatus}"
                     Foreground="#94A3B8"/>
        </StatusBarItem>
    </StatusBar>
</UserControl>