<UserControl x:Class="QuickTechSystems.WPF.Views.Transaction.Components.TotalsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Items Count -->
        <Grid Margin="0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{DynamicResource Transaction_Items}"
                     FontSize="16"
                     Foreground="#4B5563"/>
            <TextBlock Grid.Column="1"
                     Text="{Binding ItemCount}"
                     FontSize="16"
                     FontWeight="SemiBold"/>
        </Grid>

        <!-- Subtotal -->
        <Grid Grid.Row="1" Margin="0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{DynamicResource Transaction_Subtotal}"
                     FontSize="16"
                     Foreground="#4B5563"/>
            <TextBlock Grid.Column="1"
                     Text="{Binding SubTotal, StringFormat=C2}"
                     FontSize="16"
                     FontWeight="SemiBold"/>
        </Grid>

        <!-- Discount -->
        <Grid Grid.Row="2" Margin="0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{DynamicResource Transaction_Discount}"
                     FontSize="16"
                     Foreground="#EF4444"/>
            <TextBlock Grid.Column="1"
                     Text="{Binding DiscountAmount, StringFormat=C2}"
                     FontSize="16"
                     FontWeight="SemiBold"
                     Foreground="#EF4444"/>
        </Grid>

        <!-- Total -->
        <Border Grid.Row="3"
                Background="#1E293B"
                CornerRadius="8"
                Padding="16"
                Margin="0,12">
            <StackPanel>
                <TextBlock Text="{DynamicResource Transaction_Total}"
                         Foreground="#94A3B8"
                         FontSize="14"/>
                <TextBlock Foreground="White"
                         FontSize="24"
                         FontWeight="Bold">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} / {1}">
                            <Binding Path="TotalAmount" StringFormat="C2"/>
                            <Binding Path="TotalAmountLBP"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>