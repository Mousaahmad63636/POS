<UserControl x:Class="QuickTechSystems.WPF.Views.Transaction.Components.ProductCardsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:QuickTechSystems.WPF.Converters">

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding FilteredProducts}"
                      Visibility="{Binding IsProductCardsVisible, 
                                 Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="8"
                            Margin="8"
                            Width="200"
                            Height="240"
                            MouseLeftButtonDown="Product_MouseLeftButtonDown"
                            Cursor="Hand">
                        <Grid>
                            <!-- Background Image -->
                            <Border Background="#F9FAFB" 
                                    CornerRadius="8">
                                <Image Source="{Binding Image, Converter={StaticResource ByteArrayToImageConverter}}"
                                       Stretch="UniformToFill"
                                       Height="240"/>
                            </Border>

                            <!-- Semi-transparent Gradient Overlay -->
                            <Border Height="100"
                                    VerticalAlignment="Bottom"
                                    CornerRadius="0,0,8,8">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#00000000" Offset="0"/>
                                        <GradientStop Color="#CC000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <!-- Product Info Overlay -->
                            <StackPanel VerticalAlignment="Bottom"
                                      Margin="12,0,12,12">
                                <TextBlock Text="{Binding Name}"
                                         Foreground="White"
                                         FontWeight="SemiBold"
                                         FontSize="14"
                                         TextWrapping="Wrap"
                                         MaxHeight="40"
                                         TextTrimming="CharacterEllipsis"/>

                                <TextBlock Text="{Binding SalePrice, StringFormat='{}{0:C}'}"
                                         Foreground="White"
                                         FontSize="16"
                                         FontWeight="Bold"
                                         Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>