<!-- File path: QuickTechSystems.WPF.Views.Transaction.Components.FunctionButtons.xaml -->
<UserControl x:Class="QuickTechSystems.WPF.Views.Transaction.Components.FunctionButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UniformGrid Rows="1" 
                 Columns="10"
                 Margin="0,10,0,0">
        <Button Content="{DynamicResource Transaction_VoidLastItem}"
                Command="{Binding VoidLastItemCommand}"
                Margin="4"/>
        <Button Content="Change Quantity (F3)" 
                Command="{Binding ChangeQuantityCommand}"
                Margin="4"/>
        <Button Content="Save as Quote"
                Command="{Binding SaveAsQuoteCommand}"
                Margin="4"/>
        <Button Content="{DynamicResource Transaction_PriceCheck}"
                Command="{Binding PriceCheckCommand}"
                Margin="4"/>
        <Button Content="{DynamicResource Transaction_AddDiscount}"
                Command="{Binding AddDiscountCommand}"
                Margin="4"/>
        <Button Content="{DynamicResource Transaction_CloseDrawer}"
                Command="{Binding CloseDrawerCommand}"
                Margin="4"/>
        <Button Content="{DynamicResource Transaction_ProcessReturn}"
                Command="{Binding ProcessReturnCommand}"
                Margin="4"/>
        <Button Content="{DynamicResource Transaction_CashPayment}"
                Command="{Binding CashPaymentCommand}"
                Margin="4"/>
        <Button Content="Add to Customer Balance"
        Command="{Binding AddToCustomerBalanceCommand}"
        Background="#FFA726"
        Foreground="#333333"
        Margin="4"/>
        <Button Content="{DynamicResource Transaction_ClearAll}"
                Command="{Binding ClearTransactionCommand}"
                Margin="4"/>
    </UniformGrid>
</UserControl>