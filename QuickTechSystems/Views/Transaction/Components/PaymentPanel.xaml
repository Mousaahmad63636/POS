<UserControl x:Class="QuickTechSystems.WPF.Views.Transaction.Components.PaymentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Grid.Row="3" Margin="0,20,0,0">
        <!-- Payment Buttons -->
        <Button Content="{DynamicResource Transaction_CashPayment}"
                Command="{Binding CashPaymentCommand}"
                Style="{StaticResource ActionButtonStyle}"
                Background="#22C55E"
                Height="60"
                FontSize="18"
                Margin="0,0,0,12"/>

        <Button Content="{DynamicResource Transaction_PayByDebt}"
                Command="{Binding AddToCustomerDebtCommand}"
                Style="{StaticResource ActionButtonStyle}"
                Background="#3B82F6"
                Height="60"
                FontSize="18"/>
    </StackPanel>
</UserControl>