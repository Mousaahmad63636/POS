<UserControl x:Class="QuickTechSystems.WPF.Views.TransactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
             xmlns:components="clr-namespace:QuickTechSystems.WPF.Views.Transaction.Components"
             xmlns:popups="clr-namespace:QuickTechSystems.WPF.Views.Transaction.Popups"
            Loaded="TransactionView_Loaded"
             mc:Ignorable="d" 
             d:DesignWidth="1800" 
             Height="980">

    <Grid Background="#F3F4F6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <components:HeaderPanel Grid.Row="0"/>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Transaction Details -->
            <Border Background="White"
                    Margin="20,20,10,20"
                    CornerRadius="12"
                    Effect="{StaticResource DropShadowEffect}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search Panel and Toggle -->
                    <components:SearchPanel Grid.Row="0"/>

                    <!-- Category Navigation for Restaurant Mode -->
                    <Border Grid.Row="1" 
                            Visibility="{Binding IsRestaurantMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="0,1,0,1" Padding="5"
                            Margin="0,10,0,10">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding ProductCategories}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}" 
                                                Command="{Binding DataContext.SelectCategoryCommand, 
                                                         RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Margin="3" Padding="12,8"
                                                FontWeight="Medium">
                                            <!-- Simple style approach -->
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#F0F0F0"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Style>
                                            </Button.Style>
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!-- Content Area - Switches between Grid and Cards -->
                    <Grid Grid.Row="2">
                        <!-- Transaction Grid -->
                        <components:TransactionGrid 
                            Visibility="{Binding IsProductCardsVisible, 
                                         Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                        <!-- Product Cards Panel -->
                        <components:ProductCardsPanel 
                            Visibility="{Binding IsProductCardsVisible, 
                                         Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </Grid>

                    <!-- Function Buttons -->
                    <components:FunctionButtons Grid.Row="3"/>
                </Grid>
            </Border>

            <!-- Right Side Panel - Normal Mode -->
            <Border Grid.Column="1" 
                    Background="White"
                    Margin="10,20,20,20"
                    CornerRadius="12"
                    Effect="{StaticResource DropShadowEffect}"
                    Visibility="{Binding IsRestaurantMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Customer Panel -->
                    <components:CustomerPanel Grid.Row="0"/>

                    <!-- Totals Panel -->
                    <components:TotalsPanel Grid.Row="1" Margin="0,20,0,0"/>

                    <!-- Payment Panel -->
                    <components:PaymentPanel Grid.Row="3"/>
                </Grid>
            </Border>

            <!-- Right Side Panel - Restaurant Mode -->
            <Border Grid.Column="1" 
                    Background="White"
                    Margin="10,20,20,20"
                    CornerRadius="12"
                    Effect="{StaticResource DropShadowEffect}"
                    Visibility="{Binding IsRestaurantMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Customer Panel -->
                    <components:CustomerPanel Grid.Row="0"/>

                    <Border Grid.Row="1" 
                            Background="#F9FAFB"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="8"
                            Margin="0,20,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Selected Products" 
                                       FontWeight="Bold" 
                                       FontSize="16" 
                                       Margin="15,15,0,10"/>

                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding CurrentTransaction.Details}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      BorderThickness="0"
                                      IsReadOnly="True"
                                      Background="Transparent"
                                      HorizontalGridLinesBrush="#E5E7EB"
                                      Margin="15,0,15,10"
                                      RowHeight="35">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" 
                                                        Binding="{Binding ProductName}" 
                                                        Width="*"/>
                                    <DataGridTemplateColumn Header="Qty" Width="60">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding Quantity}" 
                                                        Click="QuantityButton_Click"
                                                        Background="Transparent" 
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Padding="5,5"
                                                        HorizontalContentAlignment="Center"
                                                        VerticalContentAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Price" 
                                                        Binding="{Binding UnitPrice, StringFormat=C2}" 
                                                        Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                                <Setter Property="Padding" Value="5,5"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Total" 
                                                        Binding="{Binding Total, StringFormat=C2}" 
                                                        Width="90">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                                <Setter Property="Padding" Value="5,5"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Width="50">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="×"
                                                        Command="{Binding DataContext.RemoveItemCommand, 
                                                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Foreground="#EF4444"
                                                        FontSize="14"
                                                        FontWeight="Bold"
                                                        HorizontalContentAlignment="Center"
                                                        VerticalContentAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Totals Panel -->
                    <components:TotalsPanel Grid.Row="2" Margin="0,0,0,10"/>

                    <!-- Payment Panel -->
                    <components:PaymentPanel Grid.Row="3"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <components:StatusBar Grid.Row="2"/>

        <!-- Popups -->
        <popups:ProductSearchPopup/>
       

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Grid.RowSpan="3"
              Panel.ZIndex="1000">
            <Border Background="White"
                    CornerRadius="8"
                    Width="300"
                    Height="100"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Margin="20">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="200" 
                                 Height="2" 
                                 Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding LoadingMessage}" 
                               HorizontalAlignment="Center"
                               FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>