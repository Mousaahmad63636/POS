<Window x:Class="QuickTechSystems.WPF.Views.QuickCategoryDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
        mc:Ignorable="d"
        Title="Add New Category" 
        Height="220" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Border>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Draggable Area -->
                <Border Grid.Row="0">
                    <Grid x:Name="HeaderPanel" Height="40" MouseLeftButtonDown="HeaderPanel_MouseLeftButtonDown">
                        <TextBlock Text="Add New Category" 
                                  FontSize="16"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Margin="20,0,0,0"/>
                        <Button Content="✕" 
                                Click="CloseButton_Click"
                                Width="30" 
                                Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="14"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                Cursor="Hand"/>
                    </Grid>
                </Border>

                <!-- Content -->
                <StackPanel Grid.Row="1" Margin="20,15">
                    <TextBlock Text="Category Name" 
                             FontSize="13" 
                             Margin="0,0,0,4"/>
                    <TextBox x:Name="NameTextBox" 
                            Height="32"
                            Padding="8,0"
                            VerticalContentAlignment="Center"
                            Margin="0,0,0,15"/>
                </StackPanel>

                <!-- Footer -->
                <Grid Grid.Row="2">
                    <Grid Margin="20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                                Content="Cancel"
                                Click="CancelButton_Click"
                                Width="100"
                                Height="34"
                                Margin="0,0,10,0"/>

                        <Button Grid.Column="2"
                                Content="Add"
                                Click="AddButton_Click"
                                Width="100" 
                                Height="34"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>