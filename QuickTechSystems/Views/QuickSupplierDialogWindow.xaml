<Window x:Class="QuickTechSystems.WPF.Views.QuickSupplierDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
        mc:Ignorable="d"
        Title="Add New Supplier" 
        Height="320" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Border>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Draggable Area -->
                <Border Grid.Row="0">
                    <Grid x:Name="HeaderPanel" Height="40" MouseLeftButtonDown="HeaderPanel_MouseLeftButtonDown">
                        <TextBlock Text="Add New Supplier" 
                                  FontSize="16"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Margin="20,0,0,0"/>
                        <Button Content="✕" 
                                Click="CloseButton_Click"
                                Width="30" 
                                Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="14"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                Cursor="Hand"/>
                    </Grid>
                </Border>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,0">
                            <!-- Supplier Name -->
                            <TextBlock Text="Supplier Name" 
                                     FontSize="13" 
                                     Margin="0,0,0,4"/>
                            <TextBox x:Name="NameTextBox" 
                                    Height="32"
                                    Padding="8,0"
                                    VerticalContentAlignment="Center"
                                    Margin="0,0,0,12"/>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="8,0,0,0">
                            <!-- Contact Person -->
                            <TextBlock Text="Contact Person" 
                                     FontSize="13" 
                                     Margin="0,0,0,4"/>
                            <TextBox x:Name="ContactPersonTextBox" 
                                    Height="32"
                                    Padding="8,0"
                                    VerticalContentAlignment="Center"
                                    Margin="0,0,0,12"/>
                        </StackPanel>

                        <!-- Phone & Email Row -->
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,8,0">
                            <!-- Phone -->
                            <TextBlock Text="Phone" 
                                     FontSize="13" 
                                     Margin="0,0,0,4"/>
                            <TextBox x:Name="PhoneTextBox" 
                                    Height="32"
                                    Padding="8,0"
                                    VerticalContentAlignment="Center"
                                    Margin="0,0,0,12"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="8,0,0,0">
                            <!-- Email -->
                            <TextBlock Text="Email" 
                                     FontSize="13" 
                                     Margin="0,0,0,4"/>
                            <TextBox x:Name="EmailTextBox" 
                                    Height="32"
                                    Padding="8,0"
                                    VerticalContentAlignment="Center"
                                    Margin="0,0,0,12"/>
                        </StackPanel>

                        <!-- Tax Number Row -->
                        <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                            <!-- Tax Number -->
                            <TextBlock Text="Tax Number (Optional)" 
                                     FontSize="13" 
                                     Margin="0,0,0,4"/>
                            <TextBox x:Name="TaxNumberTextBox" 
                                    Height="32"
                                    Padding="8,0"
                                    VerticalContentAlignment="Center"
                                    Margin="0,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- Footer -->
                <Grid Grid.Row="2">
                    <Grid Margin="20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                                Content="Cancel"
                                Click="CancelButton_Click"
                                Width="100"
                                Height="34"
                                Margin="0,0,10,0"/>

                        <Button Grid.Column="2"
                                Content="Add"
                                Click="AddButton_Click"
                                Width="100" 
                                Height="34"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>