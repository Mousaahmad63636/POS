<!-- ProductDetailsPopup.xaml (path: QuickTechSystems.WPF.Views/ProductDetailsPopup.xaml) -->
<UserControl x:Class="QuickTechSystems.WPF.Views.ProductDetailsPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
             xmlns:converters="clr-namespace:QuickTechSystems.WPF.Converters"
             mc:Ignorable="d"
             x:Name="ProductDetailsPopupRoot"
             FlowDirection="{Binding FlowDirection}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <!-- Main Popup Container -->
    <Grid Background="#80000000">
        <!-- Card Container -->
        <Border Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                MaxWidth="1200"
                Width="Auto"
                MaxHeight="650"
                Margin="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                                 ShadowDepth="3" 
                                 Opacity="0.2" 
                                 Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#FAFAFA">
                    <Grid Margin="24,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{DynamicResource Product_Title}" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="#333333"/>

                        <Button Grid.Column="1"
                                Content="✕"
                                Click="CloseButton_Click"
                                Width="24"
                                Height="24"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#999999"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="12"
                                            Width="{TemplateBinding Width}"
                                            Height="{TemplateBinding Height}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                            <Setter Property="Foreground" Value="#333333"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Form Content - Redesigned to use three columns instead of two -->
                <Grid Grid.Row="1" Margin="24,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.32*"/>
                        <ColumnDefinition Width="0.36*"/>
                        <ColumnDefinition Width="0.32*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <!-- Basic Information Section -->
                        <Border Background="#F8FAFC" 
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="12" 
                                Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Product_BasicInfo}" 
                                         Style="{StaticResource HeadlineSmall}" 
                                         Margin="0,0,0,12" 
                                         Foreground="{StaticResource PrimaryColor}"/>

                                <!-- Name Field -->
                                <TextBlock Text="{DynamicResource Product_Name}" 
                                         FontSize="13" 
                                         FontWeight="SemiBold" 
                                         Margin="0,0,0,4" 
                                         Foreground="#555555"/>
                                <TextBox Text="{Binding SelectedProduct.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" 
                                        Height="32"
                                        Padding="8,0"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        Margin="0,0,0,8">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>

                                <!-- Category -->
                                <TextBlock Text="{DynamicResource Product_Category}" 
                                         FontSize="13" 
                                         FontWeight="SemiBold" 
                                         Margin="0,0,0,4" 
                                         Foreground="#555555"/>
                                <ComboBox ItemsSource="{Binding Categories}"
                                        DisplayMemberPath="Name"
                                        SelectedValuePath="CategoryId"
                                        SelectedValue="{Binding SelectedProduct.CategoryId}"
                                        Height="32"
                                        Padding="8,0"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        Margin="0,0,0,8">
                                </ComboBox>

                                <!-- Supplier -->
                                <TextBlock Text="{DynamicResource Product_Supplier}" 
                                         FontSize="13" 
                                         FontWeight="SemiBold" 
                                         Margin="0,0,0,4" 
                                         Foreground="#555555"/>
                                <ComboBox ItemsSource="{Binding Suppliers}"
                                        DisplayMemberPath="Name"
                                        SelectedValuePath="SupplierId"
                                        SelectedValue="{Binding SelectedProduct.SupplierId}"
                                        Height="32"
                                        Padding="8,0"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        Margin="0,0,0,8">
                                </ComboBox>

                                <!-- Active Status -->
                                <CheckBox Content="{DynamicResource Product_IsActive}" 
                                        IsChecked="{Binding SelectedProduct.IsActive}" 
                                        Margin="0,8,0,0"
                                        FontSize="13">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Foreground" Value="#555555"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                            </StackPanel>
                        </Border>

                        <!-- Stock Information -->
                        <Border Background="#F8FAFC" 
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="12" 
                                Margin="0,8,0,0">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Product_StockInfo}" 
                                         Style="{StaticResource HeadlineSmall}" 
                                         Margin="0,0,0,12" 
                                         Foreground="{StaticResource PrimaryColor}"/>

                                <!-- Current Stock Field -->
                                <TextBlock Text="{DynamicResource Product_CurrentStock}" 
                                         FontSize="13" 
                                         FontWeight="SemiBold" 
                                         Margin="0,0,0,4" 
                                         Foreground="#555555"/>
                                <TextBox Text="{Binding SelectedProduct.CurrentStock, UpdateSourceTrigger=PropertyChanged}" 
                                        Height="32"
                                        Padding="8,0"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        Margin="0,0,0,8">
                                </TextBox>

                                <!-- Minimum Stock Field -->
                                <TextBlock Text="{DynamicResource Product_MinimumStock}" 
                                         FontSize="13" 
                                         FontWeight="SemiBold" 
                                         Margin="0,0,0,4" 
                                         Foreground="#555555"/>
                                <TextBox Text="{Binding SelectedProduct.MinimumStock, UpdateSourceTrigger=PropertyChanged}" 
                                        Height="32"
                                        Padding="8,0"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        Margin="0,0,0,8">
                                </TextBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Middle Column -->
                    <StackPanel Grid.Column="1" Margin="8,0">
                        <!-- Description Section -->
                        <Border Background="#F8FAFC" 
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="12" 
                                Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Product_Description}" 
                                         Style="{StaticResource HeadlineSmall}" 
                                         Margin="0,0,0,12" 
                                         Foreground="{StaticResource PrimaryColor}"/>

                                <TextBox Text="{Binding SelectedProduct.Description, UpdateSourceTrigger=PropertyChanged}" 
                                        Height="110"
                                        Padding="8,6"
                                        TextWrapping="Wrap"
                                        AcceptsReturn="True"
                                        VerticalScrollBarVisibility="Auto"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        Margin="0,0,0,0">
                                </TextBox>
                            </StackPanel>
                        </Border>

                        <!-- Pricing Information -->
                        <Border Background="#F8FAFC" 
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="12" 
                                Margin="0,8,0,0">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Product_PricingInfo}" 
                                         Style="{StaticResource HeadlineSmall}" 
                                         Margin="0,0,0,12" 
                                         Foreground="{StaticResource PrimaryColor}"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Purchase Price Field -->
                                    <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                        <TextBlock Text="{DynamicResource Product_PurchasePrice}" 
                                                 FontSize="13" 
                                                 FontWeight="SemiBold" 
                                                 Margin="0,0,0,4" 
                                                 Foreground="#555555"/>
                                        <TextBox Text="{Binding SelectedProduct.PurchasePrice, StringFormat=C2, UpdateSourceTrigger=PropertyChanged}" 
                                                Height="32"
                                                Padding="8,0"
                                                VerticalContentAlignment="Center"
                                                BorderBrush="#DDDDDD"
                                                BorderThickness="1"
                                                Margin="0,0,0,8">
                                        </TextBox>
                                    </StackPanel>

                                    <!-- Sale Price Field -->
                                    <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                        <TextBlock Text="{DynamicResource Product_SalePrice}" 
                                                 FontSize="13" 
                                                 FontWeight="SemiBold" 
                                                 Margin="0,0,0,4" 
                                                 Foreground="#555555"/>
                                        <TextBox Text="{Binding SelectedProduct.SalePrice, StringFormat=C2, UpdateSourceTrigger=PropertyChanged}" 
                                                Height="32"
                                                Padding="8,0"
                                                VerticalContentAlignment="Center"
                                                BorderBrush="#DDDDDD"
                                                BorderThickness="1"
                                                Margin="0,0,0,8">
                                        </TextBox>
                                    </StackPanel>
                                </Grid>

                                <!-- Speed Field -->
                                <TextBlock Text="{DynamicResource Product_Speed}" 
                                         FontSize="13" 
                                         FontWeight="SemiBold" 
                                         Margin="0,0,0,4" 
                                         Foreground="#555555"/>
                                <TextBox Text="{Binding SelectedProduct.Speed, UpdateSourceTrigger=PropertyChanged}" 
                                        Height="32"
                                        Padding="8,0"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        Margin="0,0,0,8"
                                        ToolTip="{DynamicResource Product_SpeedTooltip}">
                                </TextBox>

                                <!-- Price Calculations Section -->
                                <Border BorderBrush="#E0E0E0" 
                                        BorderThickness="1" 
                                        CornerRadius="4" 
                                        Padding="8" 
                                        Margin="0,4,0,0"
                                        Background="#F0F8FF">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                                Text="{DynamicResource Product_PriceCalculations}" 
                                                FontWeight="SemiBold"
                                                Margin="0,0,0,6"
                                                Foreground="{StaticResource PrimaryColor}"/>

                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,4,0">
                                            <TextBlock Text="{DynamicResource Product_TotalCost}" FontSize="12"/>
                                            <TextBlock Text="{Binding SelectedProductTotalCost, StringFormat=C}"
                                                      FontWeight="SemiBold"
                                                      Foreground="{StaticResource PrimaryColor}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="4,0,0,0">
                                            <TextBlock Text="{DynamicResource Product_TotalValue}" FontSize="12"/>
                                            <TextBlock Text="{Binding SelectedProductTotalValue, StringFormat=C}"
                                                      FontWeight="SemiBold"
                                                      Foreground="{StaticResource SuccessColor}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,6,4,0">
                                            <TextBlock Text="{DynamicResource Product_ProfitMargin}" FontSize="12"/>
                                            <TextBlock Text="{Binding SelectedProductProfitMargin, StringFormat=C}"
                                                      FontWeight="SemiBold">
                                                <TextBlock.Foreground>
                                                    <Binding Path="SelectedProductProfitMargin">
                                                        <Binding.Converter>
                                                            <converters:ProfitColorConverter/>
                                                        </Binding.Converter>
                                                    </Binding>
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="4,6,0,0">
                                            <TextBlock Text="{DynamicResource Product_ProfitPercentage}" FontSize="12"/>
                                            <TextBlock Text="{Binding SelectedProductProfitPercentage, StringFormat='{}{0:N2}%'}"
                                                      FontWeight="SemiBold">
                                                <TextBlock.Foreground>
                                                    <Binding Path="SelectedProductProfitPercentage">
                                                        <Binding.Converter>
                                                            <converters:ProfitColorConverter/>
                                                        </Binding.Converter>
                                                    </Binding>
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2" Margin="8,0,0,0">
                        <!-- Barcode Section -->
                        <Border Background="#F8FAFC" 
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="12" 
                                Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Product_BarcodeInfo}" 
                                         Style="{StaticResource HeadlineSmall}" 
                                         Margin="0,0,0,12" 
                                         Foreground="{StaticResource PrimaryColor}"/>

                                <!-- Barcode Field -->
                                <TextBlock Text="{DynamicResource Product_Barcode}" 
                                         FontSize="13" 
                                         FontWeight="SemiBold" 
                                         Margin="0,0,0,4" 
                                         Foreground="#555555"/>
                                <TextBox Text="{Binding SelectedProduct.Barcode, UpdateSourceTrigger=PropertyChanged}" 
                                        Height="32"
                                        Padding="8,0"
                                        VerticalContentAlignment="Center"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        Margin="0,0,0,8">
                                </TextBox>

                                <!-- Barcode Generation Buttons -->
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Content="{DynamicResource Product_GenerateBarcode}"
                                            Command="{Binding GenerateBarcodeCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,0,4,0"
                                            Height="28"/>

                                    <Button Grid.Column="1"
                                            Content="{DynamicResource Product_AutoGenerateBarcode}"
                                            Command="{Binding GenerateAutomaticBarcodeCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Margin="4,0,0,0"
                                            Height="28"/>
                                </Grid>

                                <!-- Barcode Image -->
                                <Image Source="{Binding BarcodeImage}"
                                       Height="60"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Product Image Section -->
                        <Border Background="#F8FAFC" 
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="12" 
                                Margin="0,8,0,0">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource Product_Image}" 
                                         Style="{StaticResource HeadlineSmall}" 
                                         Margin="0,0,0,12" 
                                         Foreground="{StaticResource PrimaryColor}"/>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Content="{DynamicResource Product_UploadImage}"
                                            Command="{Binding UploadImageCommand}"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,0,4,0"
                                            Height="28"/>

                                    <Button Grid.Column="1"
                                            Content="{DynamicResource Product_ClearImage}"
                                            Command="{Binding ClearImageCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Margin="4,0,0,0"
                                            Height="28"/>
                                </Grid>

                                <Border BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1"
                                        Width="160"
                                        Height="160"
                                        Background="{StaticResource SurfaceColor}">
                                    <Image Source="{Binding ProductImage}"
                                           Stretch="Uniform"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Footer with Action Buttons -->
                <Border Grid.Row="2" Background="#FAFAFA">
                    <Grid Margin="24,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                                Content="{DynamicResource Product_Delete}"
                                Command="{Binding DeleteCommand}"
                                Click="DeleteButton_Click"
                                Width="110"
                                Height="36"
                                Margin="0,0,12,0"
                                Background="#E53935"
                                Foreground="White"
                                Cursor="Hand"
                                Visibility="{Binding IsNewProduct, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderThickness="0"
                                                       CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C62828"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#B71C1C"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="2"
                                Content="{DynamicResource Product_Save}"
                                Command="{Binding SaveCommand}"
                                Click="SaveButton_Click"
                                Width="110" 
                                Height="36"
                                Background="#4CAF50"
                                Foreground="White"
                                Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderThickness="0"
                                                       CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#388E3C"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#2E7D32"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>