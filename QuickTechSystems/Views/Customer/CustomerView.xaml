<UserControl x:Class="QuickTechSystems.WPF.Views.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:domain="clr-namespace:QuickTechSystems.Domain.Entities;assembly=QuickTechSystems.Domain"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="PaymentStatusValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="sys:String"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid Background="{StaticResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Style="{StaticResource CardBorderStyle}"
                Margin="0,0,0,16">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="👥" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="Customer Management" 
                              FontSize="24" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <TextBox Grid.Column="1"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        Width="300"
                        Height="36"
                        Margin="0,0,16,0"
                        Padding="12,0"
                        BorderBrush="{StaticResource BorderBrush}"
                        Background="{StaticResource SurfaceBrush}"
                        VerticalContentAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="1"
                                               CornerRadius="4">
                                            <Grid>
                                                <TextBlock Text="🔍 Search customers..."
                                                         Foreground="{StaticResource TextTertiaryBrush}"
                                                         Margin="12,0"
                                                         VerticalAlignment="Center"
                                                         IsHitTestVisible="False">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                            Margin="12,0"
                                                            VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button Grid.Column="2"
                       Command="{Binding AddCustomerCommand}"
                       Style="{StaticResource PrimaryButtonStyle}"
                       Height="36"
                       Padding="16,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontWeight="Bold" Margin="0,0,8,0"/>
                        <TextBlock Text="Add Customer"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                   Style="{StaticResource CardBorderStyle}"
                   Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                              Text="Customer List"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextSecondaryBrush}"
                              Margin="20,20,20,16"/>

                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding Customers}"
                             SelectedItem="{Binding SelectedCustomer}"
                             Style="{StaticResource ModernDataGridStyle}"
                             Margin="20,0"
                             AutoGenerateColumns="False"
                             SelectionMode="Single"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="100"/>
                            <DataGridTextColumn Header="Balance" Binding="{Binding Balance, StringFormat=C}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Balance}" Value="0">
                                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Path=Balance, Converter={StaticResource LessThanZeroConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource ErrorTextBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" 
                               Orientation="Horizontal" 
                               Margin="20"
                               HorizontalAlignment="Right">
                        <Button Command="{Binding EditCustomerCommand}"
                               Style="{StaticResource SecondaryButtonStyle}"
                               Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✏️" Margin="0,0,6,0"/>
                                <TextBlock Text="Edit"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding DeleteCustomerCommand}"
                               Style="{StaticResource SecondaryButtonStyle}"
                               Background="#FFF5F8"
                               BorderBrush="#F3D4DA"
                               Foreground="#9A4355">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗑️" Margin="0,0,6,0"/>
                                <TextBlock Text="Delete"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="1" 
                   Style="{StaticResource CardBorderStyle}"
                   Margin="8,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">

                        <Border Background="{StaticResource ErrorLightBrush}"
                               BorderBrush="{StaticResource ErrorBorderBrush}"
                               BorderThickness="1"
                               CornerRadius="6"
                               Padding="16"
                               Margin="0,0,0,20"
                               Visibility="{Binding IsAddingCustomer, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                          Text="Add New Customer"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          Margin="0,0,0,16"/>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Name*" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditingCustomer.Name, UpdateSourceTrigger=PropertyChanged}"
                                            Height="36" Padding="8"/>

                                    <TextBlock Text="Phone" FontWeight="SemiBold" Margin="0,12,0,4"/>
                                    <TextBox Text="{Binding EditingCustomer.Phone, UpdateSourceTrigger=PropertyChanged}"
                                            Height="36" Padding="8"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditingCustomer.Email, UpdateSourceTrigger=PropertyChanged}"
                                            Height="36" Padding="8"/>

                                    <TextBlock Text="Address" FontWeight="SemiBold" Margin="0,12,0,4"/>
                                    <TextBox Text="{Binding EditingCustomer.Address, UpdateSourceTrigger=PropertyChanged}"
                                            Height="60" Padding="8" TextWrapping="Wrap" AcceptsReturn="True"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" 
                                           Orientation="Horizontal" 
                                           HorizontalAlignment="Right" 
                                           Margin="0,16,0,0">
                                    <Button Command="{Binding CancelEditCommand}"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Margin="0,0,8,0">
                                        Cancel
                                    </Button>
                                    <Button Command="{Binding SaveCustomerCommand}"
                                           Style="{StaticResource PrimaryButtonStyle}">
                                        Save Customer
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border Background="{StaticResource HoverBrush}"
                               BorderBrush="{StaticResource AccentBrush}"
                               BorderThickness="1"
                               CornerRadius="6"
                               Padding="16"
                               Margin="0,0,0,20"
                               Visibility="{Binding IsEditingCustomer, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                          Text="Edit Customer"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          Margin="0,0,0,16"/>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Name*" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditingCustomer.Name, UpdateSourceTrigger=PropertyChanged}"
                                            Height="36" Padding="8"/>

                                    <TextBlock Text="Phone" FontWeight="SemiBold" Margin="0,12,0,4"/>
                                    <TextBox Text="{Binding EditingCustomer.Phone, UpdateSourceTrigger=PropertyChanged}"
                                            Height="36" Padding="8"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding EditingCustomer.Email, UpdateSourceTrigger=PropertyChanged}"
                                            Height="36" Padding="8"/>

                                    <TextBlock Text="Address" FontWeight="SemiBold" Margin="0,12,0,4"/>
                                    <TextBox Text="{Binding EditingCustomer.Address, UpdateSourceTrigger=PropertyChanged}"
                                            Height="60" Padding="8" TextWrapping="Wrap" AcceptsReturn="True"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" 
                                           Orientation="Horizontal" 
                                           HorizontalAlignment="Right" 
                                           Margin="0,16,0,0">
                                    <Button Command="{Binding CancelEditCommand}"
                                           Style="{StaticResource SecondaryButtonStyle}"
                                           Margin="0,0,8,0">
                                        Cancel
                                    </Button>
                                    <Button Command="{Binding SaveCustomerCommand}"
                                           Style="{StaticResource PrimaryButtonStyle}">
                                        Update Customer
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <StackPanel Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Customer Details"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Background="{StaticResource SurfaceBrush}"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="6"
                                       Padding="16"
                                       Margin="0,0,8,0">
                                    <StackPanel>
                                        <TextBlock Text="📱" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Phone" 
                                                  FontWeight="SemiBold" 
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding SelectedCustomer.Phone}" 
                                                  HorizontalAlignment="Center"
                                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" 
                                       Background="{StaticResource SurfaceBrush}"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="6"
                                       Padding="16"
                                       Margin="4,0">
                                    <StackPanel>
                                        <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Balance" 
                                                  FontWeight="SemiBold" 
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding SelectedCustomer.Balance, StringFormat=C}" 
                                                  HorizontalAlignment="Center"
                                                  FontSize="16"
                                                  FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedCustomer.Balance}" Value="0">
                                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Path=SelectedCustomer.Balance, Converter={StaticResource LessThanZeroConverter}}" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ErrorTextBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" 
                                       Background="{StaticResource SurfaceBrush}"
                                       BorderBrush="{StaticResource BorderBrush}"
                                       BorderThickness="1"
                                       CornerRadius="6"
                                       Padding="16"
                                       Margin="8,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="🛒" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="Payments" 
                                                  FontWeight="SemiBold" 
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding SelectedCustomer.TransactionCount}" 
                                                  HorizontalAlignment="Center"
                                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <UniformGrid Columns="4" Margin="0,0,0,20">
                                <Button Command="{Binding EditBalanceCommand}"
                                       Style="{StaticResource PrimaryButtonStyle}"
                                       Margin="0,0,4,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="💳" Margin="0,0,6,0"/>
                                        <TextBlock Text="Edit Balance"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding SettleDebtCommand}"
                                       Style="{StaticResource PrimaryButtonStyle}"
                                       Margin="2,0"
                                       Background="{StaticResource SuccessBrush}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="💸" Margin="0,0,6,0"/>
                                        <TextBlock Text="Settle Debt"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding ShowHistoryCommand}"
                                       Style="{StaticResource SecondaryButtonStyle}"
                                       Margin="2,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📊" Margin="0,0,6,0"/>
                                        <TextBlock Text="History"/>
                                    </StackPanel>
                                </Button>

                                <Button Command="{Binding RefreshCommand}"
                                       Style="{StaticResource SecondaryButtonStyle}"
                                       Margin="4,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔄" Margin="0,0,6,0"/>
                                        <TextBlock Text="Refresh"/>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>

                            <Border Background="{StaticResource HoverBrush}"
                                   BorderBrush="{StaticResource AccentBrush}"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Padding="16"
                                   Margin="0,0,0,20"
                                   Visibility="{Binding IsEditingBalance, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Edit Balance"
                                              FontSize="16"
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="New Balance" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding NewBalance, UpdateSourceTrigger=PropertyChanged}"
                                                    Height="36" Padding="8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Reason*" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding AdjustmentReason, UpdateSourceTrigger=PropertyChanged}"
                                                    Height="36" Padding="8"/>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Right" 
                                               Margin="0,12,0,0">
                                        <Button Command="{Binding CancelEditCommand}"
                                               Style="{StaticResource SecondaryButtonStyle}"
                                               Margin="0,0,8,0">
                                            Cancel
                                        </Button>
                                        <Button Command="{Binding SaveBalanceCommand}"
                                               Style="{StaticResource PrimaryButtonStyle}">
                                            Save Balance
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Background="#F0F9FF"
                                   BorderBrush="{StaticResource SuccessBrush}"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Padding="16"
                                   Margin="0,0,0,20"
                                   Visibility="{Binding IsSettlingDebt, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Settle Debt"
                                              FontSize="16"
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Payment Amount" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding PaymentAmount, UpdateSourceTrigger=PropertyChanged}"
                                                    Height="36" Padding="8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Payment Method" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <ComboBox Text="{Binding PaymentMethod, UpdateSourceTrigger=PropertyChanged}"
                                                     Height="36" Padding="8" IsEditable="True">
                                                <sys:String>Cash</sys:String>
                                                <sys:String>Credit Card</sys:String>
                                                <sys:String>Debit Card</sys:String>
                                                <sys:String>Bank Transfer</sys:String>
                                                <sys:String>Check</sys:String>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,0">
                                            <TextBlock Text="Payment Notes" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding PaymentNotes, UpdateSourceTrigger=PropertyChanged}"
                                                    Height="36" Padding="8"/>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Right" 
                                               Margin="0,12,0,0">
                                        <Button Command="{Binding CancelEditCommand}"
                                               Style="{StaticResource SecondaryButtonStyle}"
                                               Margin="0,0,8,0">
                                            Cancel
                                        </Button>
                                        <Button Command="{Binding ProcessPaymentCommand}"
                                               Style="{StaticResource PrimaryButtonStyle}"
                                               Background="{StaticResource SuccessBrush}">
                                            Process Payment
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Background="#F0F9FF"
                                   BorderBrush="{StaticResource AccentBrush}"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Padding="16"
                                   Margin="0,0,0,20"
                                   Visibility="{Binding IsEditingPayment, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Edit Payment"
                                              FontSize="16"
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Amount*" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding EditingPayment.Amount, UpdateSourceTrigger=PropertyChanged}"
                                                    Height="36" Padding="8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Payment Method*" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <ComboBox Text="{Binding EditingPayment.PaymentMethod, UpdateSourceTrigger=PropertyChanged}"
                                                     Height="36" Padding="8" IsEditable="True">
                                                <sys:String>Cash</sys:String>
                                                <sys:String>Credit Card</sys:String>
                                                <sys:String>Debit Card</sys:String>
                                                <sys:String>Bank Transfer</sys:String>
                                                <sys:String>Check</sys:String>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,12,8,0">
                                            <TextBlock Text="Payment Date" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <DatePicker SelectedDate="{Binding EditingPayment.PaymentDate, UpdateSourceTrigger=PropertyChanged}"
                                                       Height="36"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,12,0,0">
                                            <TextBlock Text="Status" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <ComboBox Text="{Binding EditingPayment.Status, UpdateSourceTrigger=PropertyChanged}"
                                                     Height="36" Padding="8" IsEditable="True">
                                                <sys:String>Completed</sys:String>
                                                <sys:String>Pending</sys:String>
                                                <sys:String>Cancelled</sys:String>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,12,0,0">
                                            <TextBlock Text="Notes" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding EditingPayment.Notes, UpdateSourceTrigger=PropertyChanged}"
                                                    Height="60" Padding="8" TextWrapping="Wrap" AcceptsReturn="True"/>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Right" 
                                               Margin="0,16,0,0">
                                        <Button Command="{Binding CancelEditCommand}"
                                               Style="{StaticResource SecondaryButtonStyle}"
                                               Margin="0,0,8,0">
                                            Cancel
                                        </Button>
                                        <Button Command="{Binding SavePaymentCommand}"
                                               Style="{StaticResource PrimaryButtonStyle}">
                                            Save Payment
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CardBorderStyle}"
                                   Margin="0,0,0,20"
                                   Visibility="{Binding IsShowingHistory, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Margin="16">
                                    <TextBlock Text="Payment History"
                                              FontSize="16"
                                              FontWeight="SemiBold"
                                              Margin="0,0,0,12"/>

                                    <DataGrid ItemsSource="{Binding CustomerPayments}"
                                             SelectedItem="{Binding SelectedPayment}"
                                             Style="{StaticResource ModernDataGridStyle}"
                                             AutoGenerateColumns="False"
                                             MaxHeight="300">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Date" 
                                                               Binding="{Binding PaymentDate, StringFormat=MM/dd/yyyy}" 
                                                               Width="100"/>
                                            <DataGridTextColumn Header="Amount" 
                                                               Binding="{Binding Amount, StringFormat=C}" 
                                                               Width="100"/>
                                            <DataGridTextColumn Header="Payment Method" 
                                                               Binding="{Binding PaymentMethod}" 
                                                               Width="120"/>
                                            <DataGridTextColumn Header="Status" 
                                                               Binding="{Binding Status}" 
                                                               Width="80"/>
                                            <DataGridTextColumn Header="Notes" 
                                                               Binding="{Binding Notes}" 
                                                               Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <Grid Margin="0,12,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" 
                                                   Orientation="Horizontal" 
                                                   HorizontalAlignment="Left">
                                            <Button Command="{Binding EditPaymentCommand}"
                                                   Style="{StaticResource SecondaryButtonStyle}"
                                                   Margin="0,0,8,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="✏️" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Edit Payment"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Command="{Binding DeletePaymentCommand}"
                                                   Style="{StaticResource SecondaryButtonStyle}"
                                                   Background="#FFF5F8"
                                                   BorderBrush="#F3D4DA"
                                                   Foreground="#9A4355">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="🗑️" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Delete Payment"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                               Command="{Binding HideHistoryCommand}"
                                               Style="{StaticResource SecondaryButtonStyle}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="❌" Margin="0,0,6,0"/>
                                                <TextBlock Text="Close History"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>