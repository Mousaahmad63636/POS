<UserControl x:Class="QuickTechSystems.WPF.Views.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
             xmlns:converters="clr-namespace:QuickTechSystems.WPF.Converters"
             FlowDirection="{Binding CurrentFlowDirection}"
             mc:Ignorable="d"
             x:Name="CustomerViewRoot">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:PaymentButtonVisibilityConverter x:Key="PaymentButtonVisibilityConverter"/>

        <Style x:Key="SelectedCustomerRowStyle" TargetType="DataGridRow" BasedOn="{StaticResource ModernDataGridRow}">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="2" 
                                             Direction="315" 
                                             Color="#0066CC" 
                                             Opacity="0.5" 
                                             BlurRadius="8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Style="{StaticResource ResponsivePageLayout}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Style="{StaticResource SectionHeader}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="{DynamicResource Customer_Title}" Style="{StaticResource DisplaySmall}" Margin="0,0,0,8"/>
                            <TextBlock Text="Manage your customers and their information" Style="{StaticResource BodyLarge}" Foreground="{StaticResource TextSecondaryColor}" Margin="0,0,0,16"/>
                        </StackPanel>

                        <Button Grid.Column="1" 
                                Content="Add New Customer" 
                                Command="{Binding AddCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#4CAF50"
                                VerticalAlignment="Top"
                                Margin="0,8,0,0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>

                    <Border Style="{StaticResource PageDivider}"/>
                </StackPanel>

                <Border Grid.Row="1" 
                        Style="{StaticResource EnhancedResponsiveCardContainer}">
                    <DockPanel>
                        <Border DockPanel.Dock="Top"
                                Padding="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="searchBox"
                                      Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource SearchTextBox}">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>

                                <Button Grid.Column="1"
                                        Content="Search"
                                        Command="{Binding SearchCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="8,0,0,0"
                                        MinWidth="100"/>
                            </Grid>
                        </Border>

                        <DataGrid ItemsSource="{Binding Customers}"
                                SelectedItem="{Binding SelectedCustomer}"
                                Style="{StaticResource ResponsiveDataGrid}"
                                ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                                CellStyle="{StaticResource ModernDataGridCell}"
                                RowStyle="{StaticResource SelectedCustomerRowStyle}"
                                MouseDoubleClick="DataGrid_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{DynamicResource Customer_Name}" 
                                                  Binding="{Binding Name}"
                                                  Width="*"/>
                                <DataGridTextColumn Header="{DynamicResource Customer_Phone}" 
                                                  Binding="{Binding Phone}"
                                                  Width="120"/>
                                <DataGridTextColumn Header="{DynamicResource Customer_Email}" 
                                                  Binding="{Binding Email}"
                                                  Width="180"/>
                                <DataGridTextColumn Header="Balance" 
                                                  Binding="{Binding Balance, StringFormat=C2}"
                                                  Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Balance}" Value="0">
                                                    <Setter Property="Foreground" Value="#28a745"/>
                                                </DataTrigger>
                                                <Trigger Property="Text" Value="$0.00">
                                                    <Setter Property="Foreground" Value="#28a745"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding Balance, Converter={StaticResource LessThanZeroConverter}}" Value="True">
                                                    <Setter Property="Foreground" Value="#dc3545"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridCheckBoxColumn Header="{DynamicResource Customer_Active}" 
                                                      Binding="{Binding IsActive}"
                                                      Width="60"/>
                                <DataGridTemplateColumn Width="240">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Edit" 
                                                        Click="EditButton_Click"
                                                        Style="{StaticResource TextButtonStyle}"
                                                        Margin="0,0,8,0"/>
                                                <Button Content="Prices" 
                                                        Command="{Binding DataContext.SetProductPricesCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        Style="{StaticResource TextButtonStyle}"
                                                        Margin="0,0,8,0"/>
                                                <Button Content="History" 
                                                        Command="{Binding DataContext.ShowPaymentHistoryCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource TextButtonStyle}"
                                                        Margin="0,0,8,0"/>
                                                <Button Content="Payment" 
                                                        Command="{Binding DataContext.ShowPaymentDialogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource TextButtonStyle}"
                                                        Foreground="#28a745"
                                                        Visibility="{Binding Balance, Converter={StaticResource PaymentButtonVisibilityConverter}}"
                                                        Margin="0,0,8,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Edit Customer" Click="EditMenuItem_Click"/>
                                    <MenuItem Header="Set Custom Prices" Command="{Binding SetProductPricesCommand}"/>
                                    <MenuItem Header="View Payment History" Command="{Binding ShowPaymentHistoryCommand}"/>
                                    <MenuItem Header="Process Payment" 
                                              Command="{Binding ShowPaymentDialogCommand}"
                                              Visibility="{Binding SelectedCustomer.Balance, Converter={StaticResource PaymentButtonVisibilityConverter}}"/>
                                    <Separator/>
                                    <MenuItem Header="Delete Customer" Click="DeleteMenuItem_Click" Foreground="#dc3545"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </DockPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <Border Style="{StaticResource LoadingOverlay}"
               Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource ModernProgressBar}" 
                           IsIndeterminate="True" 
                           Width="120" 
                           Margin="0,0,0,16"/>
                <TextBlock Text="Processing..." 
                         Foreground="White" 
                         FontSize="14" 
                         FontWeight="SemiBold"
                         HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Popup IsOpen="{Binding IsCustomerPopupOpen, Mode=TwoWay}"
               StaysOpen="True"
               AllowsTransparency="True"
               PlacementTarget="{Binding ElementName=CustomerViewRoot}"
               Placement="Center"
               PopupAnimation="Fade"
               Focusable="True">
            <local:CustomerDetailsPopup x:Name="DetailsPopup"
                                      DataContext="{Binding}"
                                      CloseRequested="CustomerDetailsPopup_CloseRequested"
                                      SaveCompleted="CustomerDetailsPopup_SaveCompleted"/>
        </Popup>

        <Popup x:Name="ProductPricesPopup"
              IsOpen="{Binding IsProductPricesDialogOpen, Mode=TwoWay}"
              StaysOpen="True"
              PlacementTarget="{Binding ElementName=CustomerViewRoot}"
              Placement="Center"
              PopupAnimation="Fade"
              AllowsTransparency="True"
              Focusable="True">

            <Grid Background="#80000000" Width="{Binding ActualWidth, ElementName=CustomerViewRoot}" 
                 Height="{Binding ActualHeight, ElementName=CustomerViewRoot}">

                <Border Background="White"
                       BorderBrush="#DDDDDD"
                       BorderThickness="1"
                       CornerRadius="8"
                       Width="700" Height="500"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Effect="{StaticResource MediumShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0">
                            <Grid Margin="24,16">
                                <TextBlock Text="Custom Product Pricing" 
                                         FontSize="18"
                                         FontWeight="SemiBold"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Center"/>

                                <Button Content="✕"
                                        Command="{Binding CloseProductPricesDialogCommand}"
                                        Style="{StaticResource IconButtonStyle}"
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Top"
                                        ToolTip="Close"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1" 
                                Background="#F8F9FA" 
                                Padding="24,12">
                            <StackPanel>
                                <TextBlock>
                                    <Run Text="Customer: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding SelectedCustomer.Name}"/>
                                </TextBlock>
                                <TextBlock Margin="0,4,0,0" Foreground="{StaticResource TextSecondaryColor}">
                                    <Run Text="These prices will only apply to this customer's transactions."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <DataGrid Grid.Row="2"
                                ItemsSource="{Binding CustomerProducts}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                HeadersVisibility="Column"
                                GridLinesVisibility="Horizontal"
                                BorderThickness="0"
                                Background="White">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#007BFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="16,10"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="#EFF7FF"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E6E6E6"/>
                                    <Style.Triggers>
                                        <Trigger Property="AlternationIndex" Value="0">
                                            <Setter Property="Background" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Product"
                                                 Binding="{Binding ProductName}"
                                                 IsReadOnly="True"
                                                 Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="16,10"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Default Price"
                                                 Binding="{Binding DefaultPrice, StringFormat=C2}"
                                                 IsReadOnly="True"
                                                 Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="0,10,16,10"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Custom Price" 
                                                 Binding="{Binding CustomPrice, StringFormat=C2, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="0,10,16,10"/>
                                            <Setter Property="Foreground" Value="#007BFF"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                            <Setter Property="BorderBrush" Value="#007BFF"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Padding" Value="8"/>
                                            <Setter Property="Margin" Value="4"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Reset" 
                                                    Click="ResetPrice_Click"
                                                    Foreground="#007BFF"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="8"
                                                    Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Foreground" Value="#0056b3"/>
                                                                <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <DataGrid.AlternationCount>2</DataGrid.AlternationCount>
                        </DataGrid>

                        <Border Grid.Row="3">
                            <Grid Margin="24,16">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Cancel"
                                           Command="{Binding CloseProductPricesDialogCommand}"
                                           Foreground="#6C757D"
                                           Background="Transparent"
                                           BorderThickness="1"
                                           BorderBrush="#6C757D"
                                           Padding="12,6"
                                           Margin="0,0,10,0"
                                           Width="100">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#6C757D"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="Save Changes"
                                           Command="{Binding SaveCustomPricesCommand}"
                                           Background="#007BFF"
                                           Foreground="White"
                                           BorderThickness="0"
                                           Padding="12,6"
                                           Width="140">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#0056b3"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Popup>

        <Popup IsOpen="{Binding IsPaymentDialogOpen, Mode=TwoWay}"
               StaysOpen="True"
               AllowsTransparency="True"
               PlacementTarget="{Binding ElementName=CustomerViewRoot}"
               Placement="Center"
               PopupAnimation="Fade"
               Focusable="True">

            <Grid Background="#80000000" Width="{Binding ActualWidth, ElementName=CustomerViewRoot}" 
                  Height="{Binding ActualHeight, ElementName=CustomerViewRoot}">

                <Border Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="8"
                        Width="400"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Effect="{StaticResource MediumShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#007BFF" CornerRadius="8,8,0,0">
                            <Grid Margin="24,16">
                                <TextBlock Text="Process Customer Payment" 
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="White"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"/>

                                <Button Content="✕"
                                        Command="{Binding ClosePaymentDialogCommand}"
                                        Style="{StaticResource LightIconButtonStyle}"
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Top"
                                        ToolTip="Close"/>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1" 
                                Background="#F8F9FA" 
                                Padding="24,16">
                            <StackPanel>
                                <TextBlock FontSize="16" FontWeight="SemiBold">
                                    <Run Text="{Binding SelectedCustomer.Name}"/>
                                </TextBlock>
                                <TextBlock Margin="0,8,0,0">
                                    <Run Text="Current Balance: "/>
                                    <Run Text="{Binding SelectedCustomer.Balance, StringFormat=C2}" 
                                         FontWeight="Bold" 
                                         Foreground="#dc3545"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="2" Padding="24,16">
                            <StackPanel>
                                <TextBlock Text="Payment Amount:" 
                                          Margin="0,0,0,8"
                                          FontWeight="SemiBold"/>
                                <TextBox Text="{Binding PaymentAmount, StringFormat=C2, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="10"
                                         FontSize="16"
                                         BorderBrush="#007BFF"
                                         BorderThickness="1"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="3" Background="#F8F9FA" CornerRadius="0,0,8,8">
                            <Grid Margin="24,16">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Cancel"
                                           Command="{Binding ClosePaymentDialogCommand}"
                                           Foreground="#6C757D"
                                           Background="Transparent"
                                           BorderThickness="1"
                                           BorderBrush="#6C757D"
                                           Padding="16,8"
                                           Margin="0,0,10,0"
                                           Width="100">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#6C757D"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="Process Payment"
                                           Command="{Binding ProcessPaymentCommand}"
                                           Background="#28a745"
                                           Foreground="White"
                                           BorderThickness="0"
                                           Padding="16,8"
                                           Width="160">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#218838"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Popup>

        <!-- Payment History Dialog -->
        <Popup IsOpen="{Binding IsPaymentHistoryVisible, Mode=TwoWay}"
               StaysOpen="True"
               AllowsTransparency="True"
               PlacementTarget="{Binding ElementName=CustomerViewRoot}"
               Placement="Center"
               PopupAnimation="Fade"
               Focusable="True">

            <!-- Dark Overlay -->
            <Grid Background="#80000000" Width="{Binding ActualWidth, ElementName=CustomerViewRoot}" 
                  Height="{Binding ActualHeight, ElementName=CustomerViewRoot}">

                <!-- Dialog Content -->
                <Border Background="White"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        CornerRadius="8"
                        Width="800" Height="600"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Effect="{StaticResource MediumShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Dialog Header -->
                        <Border Grid.Row="0" Background="#007BFF" CornerRadius="8,8,0,0">
                            <Grid Margin="24,16">
                                <TextBlock Text="Payment History" 
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="White"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"/>

                                <Button Content="✕"
                                        Command="{Binding ClosePaymentHistoryCommand}"
                                        Style="{StaticResource LightIconButtonStyle}"
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Top"
                                        ToolTip="Close"/>
                            </Grid>
                        </Border>

                        <!-- Customer Info -->
                        <Border Grid.Row="1" 
                                Background="#F8F9FA" 
                                Padding="24,16">
                            <StackPanel>
                                <TextBlock FontSize="16" FontWeight="SemiBold">
                                    <Run Text="{Binding SelectedCustomer.Name}"/>
                                </TextBlock>
                                <TextBlock Margin="0,8,0,0">
                                    <Run Text="Current Balance: "/>
                                    <Run Text="{Binding SelectedCustomer.Balance, StringFormat=C2}" 
                                         FontWeight="Bold"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Payment History DataGrid -->
                        <DataGrid Grid.Row="2"
                                  ItemsSource="{Binding PaymentHistory}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="0"
                                  Background="White">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#007BFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Padding" Value="16,10"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="#EFF7FF"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E6E6E6"/>
                                    <Style.Triggers>
                                        <Trigger Property="AlternationIndex" Value="0">
                                            <Setter Property="Background" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date"
                                                  Binding="{Binding TransactionDate, StringFormat=\{0:MM/dd/yyyy HH:mm\}}"
                                                  Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="16,10"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Transaction #"
                                                  Binding="{Binding TransactionId}"
                                                  Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="16,10"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Type"
                                                  Binding="{Binding PaymentMethod}"
                                                  Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="16,10"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Amount"
                                                  Binding="{Binding TotalAmount, StringFormat=C2}"
                                                  Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="0,10,16,10"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Paid Amount"
                                                  Binding="{Binding PaidAmount, StringFormat=C2}"
                                                  Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="0,10,16,10"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Status"
                                                  Binding="{Binding Status}"
                                                  Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="16,10"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                            <DataGrid.AlternationCount>2</DataGrid.AlternationCount>
                        </DataGrid>

                        <!-- Dialog Footer -->
                        <Border Grid.Row="3" Background="#F8F9FA" CornerRadius="0,0,8,8">
                            <Grid Margin="24,16">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Close"
                                           Command="{Binding ClosePaymentHistoryCommand}"
                                           Foreground="#6C757D"
                                           Background="Transparent"
                                           BorderThickness="1"
                                           BorderBrush="#6C757D"
                                           Padding="16,8"
                                           Margin="0,0,10,0"
                                           Width="100">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#6C757D"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Popup>
    </Grid>
</UserControl>