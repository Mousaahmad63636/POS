<Window x:Class="QuickTechSystems.WPF.Views.MacInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter MAC Address"
        Height="180" Width="400" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Enter Activation KEY to activate :" Margin="0 0 0 10"/>
            <PasswordBox x:Name="PasswordBox" FontSize="16" Height="30"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="OK" Width="80" Margin="0 0 10 0" Click="Ok_Click"/>
                <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
