<!-- Path: QuickTechSystems.WPF/Views/TableManagementView.xaml -->
<UserControl x:Class="QuickTechSystems.WPF.Views.TableManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
             xmlns:vm="clr-namespace:QuickTechSystems.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:TableManagementViewModel}">

    <UserControl.Resources>
        <!-- Table Status Style -->
        <Style x:Key="TableStatusStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Available">
                    <Setter Property="Foreground" Value="#22c55e"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Occupied">
                    <Setter Property="Foreground" Value="#ef4444"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Reserved">
                    <Setter Property="Foreground" Value="#f59e0b"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Maintenance">
                    <Setter Property="Foreground" Value="#6b7280"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Status Color Dictionary -->
        <SolidColorBrush x:Key="AvailableColor" Color="#22c55e"/>
        <SolidColorBrush x:Key="OccupiedColor" Color="#ef4444"/>
        <SolidColorBrush x:Key="ReservedColor" Color="#f59e0b"/>
        <SolidColorBrush x:Key="MaintenanceColor" Color="#6b7280"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Table Management" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Manage restaurant tables and their status" 
                           Foreground="#6b7280" 
                           FontSize="14" 
                           Margin="0,0,0,20"/>
            </StackPanel>

            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Top">
                <Button Content="Add Table" 
                        Command="{Binding AddCommand}" 
                        Margin="0,0,8,0"
                        Padding="12,6"
                        Background="#2563eb"
                        Foreground="White"
                        BorderThickness="0"/>
                <Button Content="Refresh" 
                        Command="{Binding RefreshCommand}" 
                        Padding="12,6"
                        Background="#f3f4f6"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Filter and search bar -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,10,0"
                     Padding="8,6"
                     BorderBrush="#e5e7eb"
                     BorderThickness="1"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Tables List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#e5e7eb" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                            BorderBrush="#e5e7eb" 
                            BorderThickness="0,0,0,1" 
                            Padding="20,15">
                        <TextBlock Text="Tables" 
                                   FontWeight="SemiBold" 
                                   FontSize="16"/>
                    </Border>

                    <!-- Table List -->
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding Tables}" 
                              SelectedItem="{Binding SelectedTable}" 
                              BorderThickness="0" 
                              Background="Transparent"
                              Margin="0,0,0,10">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="BorderBrush" Value="#e5e7eb"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Table Number -->
                                    <Border Grid.Column="0" 
                                            Background="#f3f4f6" 
                                            Width="40" 
                                            Height="40" 
                                            CornerRadius="20" 
                                            Margin="0,0,12,0">
                                        <TextBlock Text="{Binding TableNumber}" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center" 
                                                   FontWeight="SemiBold"/>
                                    </Border>

                                    <!-- Table Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Description}" 
                                                   FontWeight="Medium" 
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Status}" 
                                                   FontSize="12" 
                                                   Margin="0,4,0,0"
                                                   Style="{StaticResource TableStatusStyle}"/>
                                    </StackPanel>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="2" 
                                                Orientation="Horizontal">
                                        <Button Content="Edit" 
                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                Foreground="#3b82f6"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Margin="0,0,10,0"/>
                                        <Button Content="Delete" 
                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Foreground="#ef4444"
                                                Background="Transparent"
                                                BorderThickness="0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Right Panel Container -->
            <Grid Grid.Column="1">
                <!-- Edit Form Panel -->
                <Border Background="White" 
                        BorderBrush="#e5e7eb" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <TextBlock Text="Edit Table" 
                                   FontWeight="SemiBold" 
                                   FontSize="18" 
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Table Number" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,6"/>
                        <TextBox Text="{Binding NewTable.TableNumber}" 
                                 BorderBrush="#e5e7eb"
                                 BorderThickness="1"
                                 Padding="8,6"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Description" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,6"/>
                        <TextBox Text="{Binding NewTable.Description}" 
                                 BorderBrush="#e5e7eb"
                                 BorderThickness="1"
                                 Padding="8,6"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Status" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,6"/>
                        <ComboBox ItemsSource="{Binding TableStatuses}" 
                                  SelectedItem="{Binding NewTable.Status}" 
                                  BorderBrush="#e5e7eb"
                                  BorderThickness="1"
                                  Padding="8,6"
                                  Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,10,0,0">
                            <Button Content="Save" 
                                    Command="{Binding SaveCommand}" 
                                    Background="#2563eb"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    Width="80" 
                                    Margin="0,0,10,0"/>
                            <Button Content="Cancel" 
                                    Command="{Binding CancelCommand}" 
                                    Background="#f3f4f6"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    Width="80"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Add Form Panel -->
                <Border Background="White" 
                        BorderBrush="#e5e7eb" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAdding}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <TextBlock Text="Add New Table" 
                                   FontWeight="SemiBold" 
                                   FontSize="18" 
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Table Number" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,6"/>
                        <TextBox Text="{Binding NewTable.TableNumber}" 
                                 BorderBrush="#e5e7eb"
                                 BorderThickness="1"
                                 Padding="8,6"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Description" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,6"/>
                        <TextBox Text="{Binding NewTable.Description}" 
                                 BorderBrush="#e5e7eb"
                                 BorderThickness="1"
                                 Padding="8,6"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Status" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,6"/>
                        <ComboBox ItemsSource="{Binding TableStatuses}" 
                                  SelectedItem="{Binding NewTable.Status}" 
                                  BorderBrush="#e5e7eb"
                                  BorderThickness="1"
                                  Padding="8,6"
                                  Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" 
                                    Margin="0,10,0,0">
                            <Button Content="Save" 
                                    Command="{Binding SaveCommand}" 
                                    Background="#2563eb"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    Width="80" 
                                    Margin="0,0,10,0"/>
                            <Button Content="Cancel" 
                                    Command="{Binding CancelCommand}" 
                                    Background="#f3f4f6"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    Width="80"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Details Panel -->
                <Border Background="White" 
                        BorderBrush="#e5e7eb" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsAdding}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Selected table title -->
                        <TextBlock Grid.Row="0" 
                                   Text="Table Details" 
                                   FontWeight="SemiBold" 
                                   FontSize="18" 
                                   Margin="0,0,0,20"/>

                        <!-- Selected table content - shown only when a table is selected -->
                        <StackPanel Grid.Row="1" Name="SelectedTableDetails">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedTable}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Border Background="#f9fafb" 
                                    Padding="15" 
                                    CornerRadius="8" 
                                    Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding SelectedTable.TableNumber, StringFormat='Table #{0}'}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="18"/>
                                        <TextBlock Text="{Binding SelectedTable.Description}" 
                                                   Foreground="#6b7280" 
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <!-- Status Chip -->
                                    <Border Grid.Column="1" 
                                            CornerRadius="4" 
                                            Padding="8,4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedTable.Status}" Value="Available">
                                                        <Setter Property="Background" Value="{StaticResource AvailableColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedTable.Status}" Value="Occupied">
                                                        <Setter Property="Background" Value="{StaticResource OccupiedColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedTable.Status}" Value="Reserved">
                                                        <Setter Property="Background" Value="{StaticResource ReservedColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedTable.Status}" Value="Maintenance">
                                                        <Setter Property="Background" Value="{StaticResource MaintenanceColor}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <TextBlock Text="{Binding SelectedTable.Status}" 
                                                   Foreground="White" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="12"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Quick actions section -->
                            <TextBlock Text="Change Status" 
                                       FontWeight="Medium" 
                                       Margin="0,0,0,10"/>

                            <UniformGrid Columns="2" Rows="2" Margin="0,0,0,15">
                                <Button Content="Available" 
                                        Command="{Binding ChangeStatusCommand}" 
                                        CommandParameter="Available"
                                        Margin="0,0,5,5" 
                                        Background="#ecfdf5" 
                                        BorderBrush="#d1fae5" 
                                        Foreground="#10b981"
                                        Padding="8,6"/>

                                <Button Content="Occupied" 
                                        Command="{Binding ChangeStatusCommand}" 
                                        CommandParameter="Occupied"
                                        Margin="5,0,0,5" 
                                        Background="#fef2f2" 
                                        BorderBrush="#fee2e2" 
                                        Foreground="#ef4444"
                                        Padding="8,6"/>

                                <Button Content="Reserved" 
                                        Command="{Binding ChangeStatusCommand}" 
                                        CommandParameter="Reserved"
                                        Margin="0,5,5,0" 
                                        Background="#fffbeb" 
                                        BorderBrush="#fef3c7" 
                                        Foreground="#f59e0b"
                                        Padding="8,6"/>

                                <Button Content="Maintenance" 
                                        Command="{Binding ChangeStatusCommand}" 
                                        CommandParameter="Maintenance"
                                        Margin="5,5,0,0" 
                                        Background="#f3f4f6" 
                                        BorderBrush="#e5e7eb" 
                                        Foreground="#6b7280"
                                        Padding="8,6"/>
                            </UniformGrid>

                            <!-- Edit/Delete actions -->
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="Edit Table" 
                                        Command="{Binding EditCommand}" 
                                        Background="#2563eb"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="12,6"
                                        Margin="0,0,10,0"/>
                                <Button Content="Delete" 
                                        Command="{Binding DeleteCommand}" 
                                        Background="#ef4444"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="12,6"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- No table selected message -->
                        <TextBlock Grid.Row="1" 
                                   Text="Select a table to view details" 
                                   Foreground="#6b7280" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedTable}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>