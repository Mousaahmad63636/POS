<Window x:Class="QuickTechSystems.WPF.Views.Dialogs.TableSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Select Table" 
        Width="700" 
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Window.Resources>
        <Style x:Key="TableButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="{Binding TableNumber, StringFormat='Table {0}'}"
                                           Grid.Row="0"
                                           HorizontalAlignment="Center"
                                           Margin="0,15,0,5"
                                           FontWeight="Bold"
                                           FontSize="18"/>

                                <Border Grid.Row="1" 
                                        Width="50" 
                                        Height="50" 
                                        Background="{Binding Status, Converter={StaticResource TableStatusColorConverter}}"
                                        CornerRadius="25"
                                        Margin="0,5"/>

                                <TextBlock Text="{Binding Status}"
                                           Grid.Row="2"
                                           HorizontalAlignment="Center"
                                           Margin="0,5,0,15"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="BorderBrush" Value="#D1D5DB"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding Status}" Value="Occupied">
                                <Setter Property="BorderBrush" Value="#EF4444"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Available">
                                <Setter Property="BorderBrush" Value="#22C55E"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status}" Value="Reserved">
                                <Setter Property="BorderBrush" Value="#F59E0B"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Select a Table" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Tables Grid -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="TablesItemsControl" 
                          ItemsSource="{Binding Tables}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource TableButtonStyle}"
                                Command="{Binding DataContext.SelectTableCommand, 
                                         RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Width="100" 
                    Height="40" 
                    Click="CancelButton_Click"
                    Background="#E5E7EB"
                    Foreground="#374151"
                    Margin="0,0,10,0"/>
            <Button Content="New Transaction" 
                    Width="140" 
                    Height="40"
                    Click="NewTransactionButton_Click"
                    Background="#2196F3"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>