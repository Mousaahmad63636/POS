<UserControl x:Class="QuickTechSystems.WPF.Views.TransactionHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/design/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="FilterCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style x:Key="TransactionCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Transaction History" Style="{StaticResource HeaderTextStyle}"/>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="Total Sales" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}"/>
                    <TextBlock Text="{Binding TotalSalesAmount, StringFormat=C}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="Total Transactions" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}"/>
                    <TextBlock Text="{Binding FilteredTransactions.Count}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="Date Range" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}"/>
                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}">
                        <Run Text="{Binding StartDate, StringFormat=MMM dd}"/>
                        <Run Text=" - "/>
                        <Run Text="{Binding EndDate, StringFormat='MMM dd, yyyy'}"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="Toggle Filters" Command="{Binding ToggleFiltersCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="10,0,5,0"/>
                <Button Content="Refresh" Command="{Binding LoadDataCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="5,0"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" Style="{StaticResource FilterCardStyle}" Visibility="{Binding ShowFilters, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Filters" Style="{StaticResource SubHeaderTextStyle}"/>

                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Search" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 BorderBrush="{StaticResource BorderBrush}" 
                                 Padding="8" Height="32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Employee" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Employees}" 
                                  SelectedValue="{Binding SelectedEmployeeId}"
                                  SelectedValuePath="EmployeeId"
                                  Height="32" Padding="8">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding FirstName}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding LastName}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Transaction Type" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding TransactionTypes}" 
                                  SelectedItem="{Binding SelectedTransactionType}"
                                  Height="32" Padding="8">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="6">
                        <TextBlock Text="Status" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding TransactionStatuses}" 
                                  SelectedItem="{Binding SelectedTransactionStatus}"
                                  Height="32" Padding="8"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Start Date" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding StartDate}" Height="32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="End Date" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Height="32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Button Content="Apply Filters" Command="{Binding ApplyFiltersCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                        <Button Content="Clear All" Command="{Binding ClearFiltersCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="20">
                    <Border Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="40">
                        <StackPanel HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,15"/>
                            <TextBlock Text="Loading transactions..." FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Margin="20" Padding="20">
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
                            <Setter Property="Margin" Value="20"/>
                            <Setter Property="Padding" Value="20"/>
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoading}" Value="False"/>
                                        <Condition Binding="{Binding FilteredTransactions.Count}" Value="0"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📋" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="No transactions found" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Try adjusting your filters or date range" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <ItemsControl ItemsSource="{Binding FilteredTransactions}" 
                              ScrollViewer.CanContentScroll="False">
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FilteredTransactions.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource TransactionCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Margin="0,0,15,0">
                                            <Run Text="#"/>
                                            <Run Text="{Binding TransactionId}"/>
                                        </TextBlock>
                                        <Border Background="{StaticResource AccentBrush}" CornerRadius="12" Padding="8,2" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding TransactionType}" Foreground="White" FontSize="10" FontWeight="SemiBold"/>
                                        </Border>
                                        <Border CornerRadius="12" Padding="8,2">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                            </Border.Background>
                                            <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10" FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="20,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Customer" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                <TextBlock Text="{Binding CustomerName}" FontWeight="SemiBold" FontSize="13"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Cashier" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                <TextBlock Text="{Binding CashierName}" FontWeight="SemiBold" FontSize="13"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Date" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                <TextBlock Text="{Binding TransactionDate, StringFormat='MMM dd, yyyy HH:mm'}" FontWeight="SemiBold" FontSize="13"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="{Binding TotalAmount, StringFormat=C}" FontSize="18" FontWeight="Bold" 
                                               Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center" Margin="0,0,20,0"/>

                                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Content="Details" 
                                                Command="{Binding DataContext.ViewTransactionDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource LightIconButtonStyle}" 
                                                Margin="0,0,5,0"/>
                                        <Button Content="Delete" 
                                                Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource LightIconButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>