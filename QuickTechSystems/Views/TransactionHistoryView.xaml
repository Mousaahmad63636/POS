<UserControl x:Class="QuickTechSystems.WPF.Views.TransactionHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/design/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="FilterCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style x:Key="TransactionCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="80"/>
        </Style>

        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <TextBlock Grid.Row="0" 
                   Text="Transaction History" 
                   Style="{StaticResource HeaderTextStyle}"/>

        <!-- Statistics Section -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="Total Sales" 
                               FontSize="14" 
                               Foreground="{StaticResource TextTertiaryBrush}"/>
                    <TextBlock Text="{Binding TotalSalesAmount, StringFormat=C, FallbackValue=$0.00}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource AccentBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                <StackPanel>
                    <TextBlock Text="Total Transactions" 
                               FontSize="14" 
                               Foreground="{StaticResource TextTertiaryBrush}"/>
                    <TextBlock Text="{Binding FilteredTransactions.Count, FallbackValue=0}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center">
                <Button Content="Refresh" 
                        Command="{Binding LoadDataCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Margin="5,0"/>
            </StackPanel>
        </Grid>

        <!-- Filters Section -->
        <Border Grid.Row="2" Style="{StaticResource FilterCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Filters" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource TextSecondaryBrush}" 
                           Margin="0,0,0,15"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Employee Filter -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Employee" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding Employees}" 
                                  SelectedValue="{Binding SelectedEmployeeId}"
                                  SelectedValuePath="EmployeeId"
                                  Style="{StaticResource FilterComboBoxStyle}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding FirstName, FallbackValue=''}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding LastName, FallbackValue=''}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Transaction Type Filter -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Transaction Type" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding TransactionTypes}" 
                                  SelectedItem="{Binding SelectedTransactionType}"
                                  Style="{StaticResource FilterComboBoxStyle}"/>
                    </StackPanel>

                    <!-- Clear Filters Button -->
                    <StackPanel Grid.Column="4" 
                                VerticalAlignment="Bottom">
                        <Button Content="Clear Filters" 
                                Command="{Binding ClearFiltersCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Transaction List Section -->
        <ScrollViewer Grid.Row="3" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Loading Indicator -->
                <Border Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
                        Background="{StaticResource SurfaceBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="40"
                        Margin="20">
                    <StackPanel HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="4" 
                                     Margin="0,0,0,15"/>
                        <TextBlock Text="Loading transactions..." 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- No Data Message -->
                <Border Margin="20" Padding="40">
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoading}" Value="False"/>
                                        <Condition Binding="{Binding FilteredTransactions.Count}" Value="0"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📋" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="No transactions found" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Try adjusting your filters" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextTertiaryBrush}" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Transaction Items -->
                <ItemsControl ItemsSource="{Binding FilteredTransactions}">
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding FilteredTransactions.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource TransactionCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Transaction ID and Status -->
                                    <StackPanel Grid.Column="0" 
                                                Orientation="Horizontal" 
                                                VerticalAlignment="Center">
                                        <TextBlock FontSize="16" 
                                                   FontWeight="Bold" 
                                                   Foreground="{StaticResource AccentBrush}" 
                                                   Margin="0,0,15,0">
                                            <Run Text="#"/>
                                            <Run Text="{Binding TransactionId, FallbackValue=0}"/>
                                        </TextBlock>
                                        <Border Background="{StaticResource AccentBrush}" 
                                                CornerRadius="12" 
                                                Padding="8,4">
                                            <TextBlock Text="{Binding TransactionType, FallbackValue='Sale'}" 
                                                       Foreground="White" 
                                                       FontSize="10" 
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Transaction Details -->
                                    <StackPanel Grid.Column="1" Margin="20,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Customer" 
                                                           FontSize="11" 
                                                           Foreground="{StaticResource TextTertiaryBrush}"/>
                                                <TextBlock Text="{Binding CustomerName, FallbackValue='Walk-in'}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="13"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="Cashier" 
                                                           FontSize="11" 
                                                           Foreground="{StaticResource TextTertiaryBrush}"/>
                                                <TextBlock Text="{Binding CashierName, FallbackValue='Unknown'}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="13"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="Date" 
                                                           FontSize="11" 
                                                           Foreground="{StaticResource TextTertiaryBrush}"/>
                                                <TextBlock Text="{Binding TransactionDate, StringFormat='MMM dd, yyyy HH:mm'}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="13"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Transaction Amount -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding TotalAmount, StringFormat=C, FallbackValue=$0.00}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="{StaticResource SuccessBrush}" 
                                               VerticalAlignment="Center" 
                                               Margin="0,0,20,0"/>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Column="3" 
                                                Orientation="Horizontal" 
                                                VerticalAlignment="Center">
                                        <Button Content="Details" 
                                                Command="{Binding DataContext.ViewTransactionDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource LightIconButtonStyle}" 
                                                Margin="0,0,8,0"/>
                                        <Button Content="Delete" 
                                                Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource LightIconButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>