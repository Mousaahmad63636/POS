<!-- Path: QuickTechSystems.WPF.Views/BatchBarcodePrintWindow.xaml -->
<Window x:Class="QuickTechSystems.WPF.Views.BatchBarcodePrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Batch Barcode Printing" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Batch Barcode Printing" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- Summary -->
        <TextBlock x:Name="SummaryTextBlock" 
                   Grid.Row="1"
                   Text="Preparing to print..."
                   Margin="0,0,0,10"
                   FontWeight="SemiBold"/>

        <!-- Preview Content -->
        <Border Grid.Row="2" 
                BorderThickness="1" 
                BorderBrush="#CCCCCC" 
                Background="#F5F5F5" 
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto">
                <TextBlock x:Name="PreviewTextBlock" 
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="Cancel" 
                    Width="100" 
                    Margin="0,0,10,0" 
                    Click="CancelButton_Click"/>
            <Button Content="Print" 
                    Width="100" 
                    Background="#007ACC" 
                    Foreground="White" 
                    Click="PrintButton_Click"/>
        </StackPanel>
    </Grid>
</Window>