<UserControl x:Class="QuickTechSystems.WPF.Views.ProductView"
             x:Name="ProductViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/design/blend/2008"
             xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">

    <UserControl.Resources>
        <!-- Converters -->
        <local:LowStockConverter x:Key="LowStockConverter"/>
        <local:ProductIdToTitleConverter x:Key="ProductIdToTitleConverter"/>
        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <local:DecimalConverter x:Key="DecimalConverter"/>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8,8,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Active Tab Button Style -->
        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Stock Status Converter -->
        <Style x:Key="StockStatusStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding CurrentStock}" Value="0">
                    <Setter Property="Foreground" Value="#DC2626"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding>
                            <MultiBinding.Converter>
                                <local:LowStockConverter/>
                            </MultiBinding.Converter>
                            <Binding Path="CurrentStock"/>
                            <Binding Path="MinimumStock"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Foreground" Value="#D97706"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Foreground" Value="#059669"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Product List Item Style -->
        <Style x:Key="ProductListItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="100"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#EBF4FF"/>
                    <Setter Property="BorderThickness" Value="4,0,0,1"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource PrimaryBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" 
                Padding="28,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Product Management" FontSize="26" FontWeight="Bold" 
                           Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,40,0"/>

                <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                        CornerRadius="8" Width="360" Height="55">
                    <Grid>
                        <TextBlock Text="🔍" FontSize="18" Margin="16,0,0,0" VerticalAlignment="Center" 
                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0" 
                                 Margin="48,0,16,0" VerticalAlignment="Center"
                                 FontSize="15" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Search products by name or barcode..." 
                                   Margin="48,0,16,0" VerticalAlignment="Center"
                                   Foreground="{StaticResource TextTertiaryBrush}" FontSize="15"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding SearchText, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="➕ Add Product" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding AddProductCommand}" 
                            Height="55" Width="160" FontWeight="Medium" FontSize="15" Margin="0,0,16,0"/>
                    <Button Content="🔄 Refresh" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding RefreshCommand}" 
                            Height="55" Width="120" FontSize="15"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MaxWidth="650"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Product List - Left Panel -->
            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}" Margin="28,20,0,28">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource HoverBrush}" 
                            Padding="24,20" BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <TextBlock FontSize="20" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                <Run Text="Products"/>
                                <Run Text=" (" Foreground="{StaticResource TextTertiaryBrush}"/>
                                <Run Text="{Binding Products.Count, Mode=OneWay}" Foreground="{StaticResource AccentBrush}"/>
                                <Run Text=")" Foreground="{StaticResource TextTertiaryBrush}"/>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Products}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ProductListItemStyle}">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                          Command="{Binding DataContext.SelectProductCommand, ElementName=ProductViewControl}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Name}" 
                                                               FontWeight="Medium" FontSize="16"
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <Border Grid.Column="1" Background="#F3F4F6" 
                                                            CornerRadius="6" Padding="8,4" Margin="12,0,0,0"
                                                            Visibility="{Binding IsActive, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                        <TextBlock Text="Inactive" FontSize="11" FontWeight="Medium"
                                                                   Foreground="#6B7280"/>
                                                    </Border>
                                                </Grid>

                                                <TextBlock Margin="0,0,0,12" Foreground="{StaticResource TextTertiaryBrush}" FontSize="14">
                                                    <Run Text="{Binding Barcode}" FontFamily="Consolas"/>
                                                    <Run Text=" • "/>
                                                    <Run Text="{Binding CategoryName}"/>
                                                </TextBlock>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                                                        <TextBlock Text="Stock: " FontSize="13" 
                                                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                                                        <TextBlock Text="{Binding CurrentStock}" FontSize="13" 
                                                                   Style="{StaticResource StockStatusStyle}"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                        <TextBlock Text="Storehouse: " FontSize="13" 
                                                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                                                        <TextBlock Text="{Binding Storehouse}" FontSize="13" 
                                                                   FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="20,0,0,0">
                                                <TextBlock Text="{Binding SalePrice, StringFormat=C}" 
                                                           FontSize="18" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           HorizontalAlignment="Right"/>
                                                <TextBlock FontSize="13" Foreground="{StaticResource TextTertiaryBrush}"
                                                           HorizontalAlignment="Right">
                                                    <Run Text="Cost: "/>
                                                    <Run Text="{Binding PurchasePrice, StringFormat=C}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Product Details - Right Panel -->
            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}" Margin="0,20,28,28">
                <Grid>
                    <!-- Main Content -->
                    <Grid Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Details Header -->
                        <Border Grid.Row="0" BorderBrush="{StaticResource BorderBrush}" 
                                BorderThickness="0,0,0,1" Padding="28,24">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" FontSize="22" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}">
                                            <Binding Path="SelectedProduct.ProductId">
                                                <Binding.Converter>
                                                    <local:ProductIdToTitleConverter/>
                                                </Binding.Converter>
                                            </Binding>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="💾 Save" 
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Command="{Binding SaveProductCommand}" 
                                            Height="44" Width="120" FontWeight="Medium" FontSize="15" Margin="0,0,16,0"/>
                                    <Button Content="🗑️ Delete" 
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Command="{Binding DeleteProductCommand}" 
                                            Height="44" Width="120" FontSize="15"
                                            Visibility="{Binding SelectedProduct.ProductId, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Tab Navigation -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="28,0,28,0">
                            <Button x:Name="BasicInfoTab" Content="📝 Basic Info" 
                                    Style="{StaticResource ActiveTabButtonStyle}"
                                    Click="TabButton_Click" Tag="BasicInfo"/>
                            <Button x:Name="PricingTab" Content="💰 Pricing" 
                                    Style="{StaticResource TabButtonStyle}"
                                    Click="TabButton_Click" Tag="Pricing"/>
                            <Button x:Name="InventoryTab" Content="📦 Inventory" 
                                    Style="{StaticResource TabButtonStyle}"
                                    Click="TabButton_Click" Tag="Inventory"/>
                        </StackPanel>

                        <!-- Tab Content -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="28">
                            <Grid>
                                <!-- Basic Info Tab -->
                                <StackPanel x:Name="BasicInfoContent">
                                    <Grid Margin="0,0,0,32">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Product Name with Matching Products -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,28">
                                            <TextBlock Text="Product Name *" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <Grid>
                                                <TextBox Text="{Binding SelectedProduct.Name, UpdateSourceTrigger=PropertyChanged}" 
                                                         Padding="16" Height="55" FontSize="15"/>

                                                <!-- Matching Products Dropdown -->
                                                <Popup IsOpen="{Binding ShowMatchingProducts}" 
                                                       PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=Grid}}"
                                                       Placement="Bottom" 
                                                       Width="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ActualWidth}"
                                                       StaysOpen="False">
                                                    <Border Background="{StaticResource SurfaceBrush}" 
                                                            BorderBrush="{StaticResource BorderBrush}" 
                                                            BorderThickness="1" 
                                                            CornerRadius="6"
                                                            MaxHeight="280">
                                                        <Border.Effect>
                                                            <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" 
                                                                              Color="{StaticResource ShadowColor}" Opacity="0.15"/>
                                                        </Border.Effect>
                                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                            <StackPanel>
                                                                <Border Padding="16,12,16,8">
                                                                    <TextBlock Text="📦 Similar Products Found" 
                                                                               FontWeight="SemiBold" FontSize="15"
                                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                </Border>
                                                                <ItemsControl ItemsSource="{Binding MatchingProducts}">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Border Background="Transparent" 
                                                                                    BorderThickness="0,0,0,1" 
                                                                                    BorderBrush="{StaticResource BorderBrush}"
                                                                                    Cursor="Hand"
                                                                                    Padding="16,12"
                                                                                    MinHeight="60">
                                                                                <Border.InputBindings>
                                                                                    <MouseBinding MouseAction="LeftClick" 
                                                                                                  Command="{Binding DataContext.SelectMatchingProductCommand, ElementName=ProductViewControl}" 
                                                                                                  CommandParameter="{Binding}"/>
                                                                                </Border.InputBindings>
                                                                                <Border.Style>
                                                                                    <Style TargetType="Border">
                                                                                        <Style.Triggers>
                                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                                                                            </Trigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </Border.Style>
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                        <ColumnDefinition Width="Auto"/>
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <StackPanel Grid.Column="0">
                                                                                        <TextBlock Text="{Binding Name}" 
                                                                                                   FontWeight="Medium" FontSize="15"
                                                                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                                                                        <TextBlock Text="{Binding Barcode}" 
                                                                                                   FontSize="13" 
                                                                                                   FontFamily="Consolas"
                                                                                                   Foreground="{StaticResource TextTertiaryBrush}" Margin="0,4,0,0"/>
                                                                                    </StackPanel>
                                                                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                                                        <TextBlock Text="{Binding SalePrice, StringFormat=C}" 
                                                                                                   FontWeight="SemiBold" FontSize="15"
                                                                                                   Foreground="{StaticResource AccentBrush}"/>
                                                                                        <TextBlock Text="{Binding CategoryName}" 
                                                                                                   FontSize="12" 
                                                                                                   Foreground="{StaticResource TextTertiaryBrush}" Margin="0,4,0,0"/>
                                                                                    </StackPanel>
                                                                                </Grid>
                                                                            </Border>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                                <Button Content="❌ Clear Search" 
                                                                        Command="{Binding ClearMatchingProductsCommand}"
                                                                        Style="{StaticResource SecondaryButtonStyle}"
                                                                        Margin="12" Height="36" FontSize="13"/>
                                                            </StackPanel>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Barcode with Validation -->
                                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,28">
                                            <TextBlock Text="Barcode *" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="12"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBox Grid.Row="0" Grid.Column="0" 
                                                         Text="{Binding SelectedProduct.Barcode, UpdateSourceTrigger=PropertyChanged}" 
                                                         Padding="16" Height="55" FontSize="15" FontFamily="Consolas"/>
                                                <Button Grid.Row="0" Grid.Column="2" Content="🏷️" 
                                                        Command="{Binding GenerateBarcodeCommand}"
                                                        Style="{StaticResource SecondaryButtonStyle}"
                                                        Height="55" Width="48" FontSize="18"/>

                                                <!-- Barcode Validation Message -->
                                                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                                                        Background="#FEF3C7" 
                                                        BorderBrush="#F59E0B" 
                                                        BorderThickness="1" 
                                                        CornerRadius="6" 
                                                        Padding="12" 
                                                        Margin="0,8,0,0"
                                                        Visibility="{Binding HasBarcodeValidation, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="ℹ️" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                                        <TextBlock Text="{Binding BarcodeValidationMessage}" 
                                                                   Foreground="#D97706" 
                                                                   TextWrapping="Wrap" 
                                                                   VerticalAlignment="Center" 
                                                                   FontSize="14"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Existing Product Indicator -->
                                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                                                Background="#EBF4FF" 
                                                BorderBrush="#93C5FD" 
                                                BorderThickness="1" 
                                                CornerRadius="8" 
                                                Padding="20" 
                                                Margin="0,0,0,28"
                                                Visibility="{Binding IsExistingProduct, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <StackPanel>
                                                <TextBlock Text="📦 Updating Existing Product" 
                                                           FontWeight="SemiBold" FontSize="16"
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           Margin="0,0,0,12"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="20"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="Adding Quantity:" FontSize="14" 
                                                                   Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                                                        <TextBox Text="{Binding NewQuantity, UpdateSourceTrigger=PropertyChanged}" 
                                                                 Padding="12" Height="40" FontSize="14"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="2">
                                                        <TextBlock Text="Purchase Price for New Stock:" FontSize="14" 
                                                                   Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                                                        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                                                                CornerRadius="4" Height="40">
                                                            <Grid>
                                                                <TextBlock Text="$" FontSize="14" Margin="12,0,0,0" 
                                                                           VerticalAlignment="Center" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                                <TextBox Text="{Binding NewPurchasePrice, UpdateSourceTrigger=PropertyChanged}" 
                                                                         Background="Transparent" BorderThickness="0" 
                                                                         Margin="28,0,12,0" VerticalAlignment="Center" FontSize="14"/>
                                                            </Grid>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Border>

                                        <!-- Category and Supplier -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,28">
                                            <TextBlock Text="Category *" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <ComboBox ItemsSource="{Binding Categories}"
                                                      SelectedValuePath="CategoryId" DisplayMemberPath="Name"
                                                      SelectedValue="{Binding SelectedProduct.CategoryId}"
                                                      Padding="16" Height="55" FontSize="15"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,28">
                                            <TextBlock Text="Supplier" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <ComboBox ItemsSource="{Binding Suppliers}"
                                                      SelectedValuePath="SupplierId" DisplayMemberPath="Name"
                                                      SelectedValue="{Binding SelectedProduct.SupplierId}"
                                                      Padding="16" Height="55" FontSize="15"/>
                                        </StackPanel>

                                        <!-- Supplier Invoice -->
                                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,28">
                                            <TextBlock Text="Supplier Invoice" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <ComboBox ItemsSource="{Binding SupplierInvoices}"
                                                      SelectedItem="{Binding SelectedSupplierInvoice}"
                                                      DisplayMemberPath="InvoiceNumber"
                                                      Padding="16" Height="55" FontSize="15"/>
                                        </StackPanel>

                                        <!-- Description -->
                                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,28">
                                            <TextBlock Text="Description" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <TextBox Text="{Binding SelectedProduct.Description, UpdateSourceTrigger=PropertyChanged}" 
                                                     Padding="16" Height="96" TextWrapping="Wrap" AcceptsReturn="True" FontSize="15"/>
                                        </StackPanel>
                                    </Grid>

                                    <CheckBox Content="Active Product" 
                                              IsChecked="{Binding SelectedProduct.IsActive}" 
                                              FontWeight="Medium" FontSize="15" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Pricing Tab -->
                                <StackPanel x:Name="PricingContent" Visibility="Collapsed">
                                    <Grid Margin="0,0,0,32">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Purchase Price" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                                                    CornerRadius="6" Height="55">
                                                <Grid>
                                                    <TextBlock Text="$" FontSize="16" Margin="16,0,0,0" 
                                                               VerticalAlignment="Center" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    <TextBox Text="{Binding SelectedProduct.PurchasePrice, UpdateSourceTrigger=PropertyChanged}" 
                                                             Background="Transparent" BorderThickness="0" 
                                                             Margin="36,0,16,0" VerticalAlignment="Center" FontSize="15"/>
                                                </Grid>
                                            </Border>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Sale Price" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                                                    CornerRadius="6" Height="55">
                                                <Grid>
                                                    <TextBlock Text="$" FontSize="16" Margin="16,0,0,0" 
                                                               VerticalAlignment="Center" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    <TextBox Text="{Binding SelectedProduct.SalePrice, UpdateSourceTrigger=PropertyChanged}" 
                                                             Background="Transparent" BorderThickness="0" 
                                                             Margin="36,0,16,0" VerticalAlignment="Center" FontSize="15"/>
                                                </Grid>
                                            </Border>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4">
                                            <TextBlock Text="Wholesale Price" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                                                    CornerRadius="6" Height="55">
                                                <Grid>
                                                    <TextBlock Text="$" FontSize="16" Margin="16,0,0,0" 
                                                               VerticalAlignment="Center" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    <TextBox Text="{Binding SelectedProduct.WholesalePrice, UpdateSourceTrigger=PropertyChanged}" 
                                                             Background="Transparent" BorderThickness="0" 
                                                             Margin="36,0,16,0" VerticalAlignment="Center" FontSize="15"/>
                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Box Pricing Section -->
                                    <Border Background="#F8FAFC" BorderBrush="{StaticResource BorderBrush}" 
                                            BorderThickness="1" CornerRadius="10" Padding="28">
                                        <StackPanel>
                                            <TextBlock Text="📦 Box Pricing" FontSize="20" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,24"/>

                                            <Grid Margin="0,0,0,24">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Box Barcode" FontWeight="Medium" FontSize="15"
                                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="12"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBox Grid.Column="0" Text="{Binding SelectedProduct.BoxBarcode, UpdateSourceTrigger=PropertyChanged}" 
                                                                 Padding="16" Height="55" FontSize="15" FontFamily="Consolas"/>
                                                        <Button Grid.Column="2" Content="🏷️" 
                                                                Command="{Binding GenerateBarcodeCommand}"
                                                                CommandParameter="Box"
                                                                Style="{StaticResource SecondaryButtonStyle}"
                                                                Height="55" Width="48" FontSize="18"/>
                                                    </Grid>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="Items Per Box" FontWeight="Medium" FontSize="15"
                                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                                    <TextBox Text="{Binding SelectedProduct.ItemsPerBox, UpdateSourceTrigger=PropertyChanged}" 
                                                             Padding="16" Height="55" FontSize="15"/>
                                                </StackPanel>
                                            </Grid>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Box Purchase Price" FontWeight="Medium" FontSize="15"
                                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                                                            CornerRadius="6" Height="55">
                                                        <Grid>
                                                            <TextBlock Text="$" FontSize="16" Margin="16,0,0,0" 
                                                                       VerticalAlignment="Center" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                            <TextBox Text="{Binding SelectedProduct.BoxPurchasePrice, UpdateSourceTrigger=PropertyChanged}" 
                                                                     Background="Transparent" BorderThickness="0" 
                                                                     Margin="36,0,16,0" VerticalAlignment="Center" FontSize="15"/>
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="Box Sale Price" FontWeight="Medium" FontSize="15"
                                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                                                            CornerRadius="6" Height="55">
                                                        <Grid>
                                                            <TextBlock Text="$" FontSize="16" Margin="16,0,0,0" 
                                                                       VerticalAlignment="Center" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                            <TextBox Text="{Binding SelectedProduct.BoxSalePrice, UpdateSourceTrigger=PropertyChanged}" 
                                                                     Background="Transparent" BorderThickness="0" 
                                                                     Margin="36,0,16,0" VerticalAlignment="Center" FontSize="15"/>
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>

                                                <StackPanel Grid.Column="4">
                                                    <TextBlock Text="Box Wholesale Price" FontWeight="Medium" FontSize="15"
                                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                                    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                                                            CornerRadius="6" Height="55">
                                                        <Grid>
                                                            <TextBlock Text="$" FontSize="16" Margin="16,0,0,0" 
                                                                       VerticalAlignment="Center" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                            <TextBox Text="{Binding SelectedProduct.BoxWholesalePrice, UpdateSourceTrigger=PropertyChanged}" 
                                                                     Background="Transparent" BorderThickness="0" 
                                                                     Margin="36,0,16,0" VerticalAlignment="Center" FontSize="15"/>
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Inventory Tab -->
                                <StackPanel x:Name="InventoryContent" Visibility="Collapsed">
                                    <!-- Stock Information -->
                                    <Grid Margin="0,0,0,32">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Current Stock" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <TextBox Text="{Binding SelectedProduct.CurrentStock, UpdateSourceTrigger=PropertyChanged}" 
                                                     Padding="16" Height="55" FontSize="15"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Storehouse" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <TextBox Text="{Binding SelectedProduct.Storehouse, UpdateSourceTrigger=PropertyChanged}" 
                                                     Padding="16" Height="55" FontSize="15"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4">
                                            <TextBlock Text="Minimum Stock" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <TextBox Text="{Binding SelectedProduct.MinimumStock, UpdateSourceTrigger=PropertyChanged}" 
                                                     Padding="16" Height="55" FontSize="15"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="6">
                                            <TextBlock Text="Number of Boxes" FontWeight="Medium" FontSize="15"
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                                            <TextBox Text="{Binding SelectedProduct.NumberOfBoxes, UpdateSourceTrigger=PropertyChanged}" 
                                                     Padding="16" Height="55" FontSize="15"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Transfer Section -->
                                    <Border Background="#EBF4FF" BorderBrush="#93C5FD" BorderThickness="1" 
                                            CornerRadius="10" Padding="28">
                                        <StackPanel>
                                            <TextBlock FontSize="20" FontWeight="SemiBold" 
                                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,24">
                                                <Run Text="🔄"/>
                                                <Run Text=" Transfer from Storehouse"/>
                                            </TextBlock>

                                            <!-- Status Cards -->
                                            <Grid Margin="0,0,0,24">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" MinHeight="90">
                                                    <StackPanel>
                                                        <TextBlock Text="Available in Storehouse" FontSize="13" 
                                                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                                                        <TextBlock Text="{Binding SelectedProduct.Storehouse}" FontSize="26" 
                                                                   FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Margin="0,4,0,0"/>
                                                        <TextBlock Text="individual items" FontSize="12" 
                                                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    </StackPanel>
                                                </Border>

                                                <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="20" MinHeight="90">
                                                    <StackPanel>
                                                        <TextBlock Text="Available Boxes" FontSize="13" 
                                                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                                                        <TextBlock Text="{Binding AvailableBoxes}" FontSize="26" 
                                                                   FontWeight="Bold" Foreground="#059669" Margin="0,4,0,0"/>
                                                        <TextBlock Text="complete boxes" FontSize="12" 
                                                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    </StackPanel>
                                                </Border>

                                                <Border Grid.Column="4" Background="White" CornerRadius="8" Padding="20" MinHeight="90">
                                                    <StackPanel>
                                                        <TextBlock Text="Items per Box" FontSize="13" 
                                                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                                                        <TextBlock Text="{Binding SelectedProduct.ItemsPerBox}" FontSize="26" 
                                                                   FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,4,0,0"/>
                                                        <TextBlock Text="items/box" FontSize="12" 
                                                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>

                                            <!-- Transfer Type Selection -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                                <RadioButton Content="Transfer Individual Items" 
                                                             IsChecked="{Binding IsIndividualTransfer}" 
                                                             GroupName="TransferType" FontWeight="Medium" FontSize="15" Margin="0,0,32,0"/>
                                                <RadioButton Content="Transfer Boxes" 
                                                             IsChecked="{Binding IsBoxTransfer}" 
                                                             GroupName="TransferType" FontWeight="Medium" FontSize="15"/>
                                            </StackPanel>

                                            <!-- Individual Transfer -->
                                            <Border Background="White" BorderBrush="#DBEAFE" BorderThickness="1" 
                                                    CornerRadius="8" Padding="20" Margin="0,0,0,24"
                                                    Visibility="{Binding IsIndividualTransfer, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel>
                                                    <TextBlock Text="📦 Individual Items Transfer" FontWeight="SemiBold" FontSize="16"
                                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Quantity:" VerticalAlignment="Center" FontWeight="Medium" FontSize="15" Margin="0,0,16,0"/>
                                                        <TextBox Text="{Binding TransferQuantity, UpdateSourceTrigger=PropertyChanged}" 
                                                                 Width="140" Padding="12" Height="55" Margin="0,0,16,0" FontSize="15"/>
                                                        <TextBlock Text="items" VerticalAlignment="Center" FontSize="15"
                                                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            <!-- Box Transfer -->
                                            <Border Background="White" BorderBrush="#D1FAE5" BorderThickness="1" 
                                                    CornerRadius="8" Padding="20" Margin="0,0,0,24"
                                                    Visibility="{Binding IsBoxTransfer, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel>
                                                    <TextBlock Text="📦 Box Transfer" FontWeight="SemiBold" FontSize="16"
                                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                        <TextBlock Text="Items per box:" VerticalAlignment="Center" Margin="0,0,16,0" FontSize="15"/>
                                                        <TextBlock Text="{Binding SelectedProduct.ItemsPerBox}" FontWeight="SemiBold" FontSize="15"
                                                                   Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                        <TextBlock Text="Available boxes:" VerticalAlignment="Center" Margin="0,0,16,0" FontSize="15"/>
                                                        <TextBlock Text="{Binding AvailableBoxes}" FontWeight="SemiBold" FontSize="15"
                                                                   Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                        <TextBlock Text="Boxes to transfer:" VerticalAlignment="Center" FontWeight="Medium" FontSize="15" Margin="0,0,16,0"/>
                                                        <TextBox Text="{Binding TransferBoxes, UpdateSourceTrigger=PropertyChanged}" 
                                                                 Width="140" Padding="12" Height="40" Margin="0,0,16,0" FontSize="15"/>
                                                        <TextBlock Text="boxes" VerticalAlignment="Center" FontSize="15"
                                                                   Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding BoxTransferSummary}" 
                                                               Foreground="{StaticResource TextTertiaryBrush}" 
                                                               FontStyle="Italic" FontSize="14"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Transfer Actions -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                                <Button Content="{Binding TransferButtonText}" 
                                                        Command="{Binding TransferFromStorehouseCommand}"
                                                        Style="{StaticResource PrimaryButtonStyle}"
                                                        Height="55" Width="180" FontWeight="Medium" FontSize="15" Margin="0,0,16,0"/>
                                                <Button Content="Reset" 
                                                        Command="{Binding ResetTransferCommand}"
                                                        Style="{StaticResource SecondaryButtonStyle}"
                                                        Height="55" Width="120" FontSize="15"/>
                                            </StackPanel>

                                            <!-- Validation Message -->
                                            <Border Background="#FEF3C7" BorderBrush="#F59E0B" BorderThickness="1" 
                                                    CornerRadius="8" Padding="16"
                                                    Visibility="{Binding HasTransferValidationMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="⚠️" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="16"/>
                                                    <TextBlock Text="{Binding TransferValidationMessage}" 
                                                               Foreground="#D97706" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="14"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </Grid>

                    <!-- Empty State -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding IsEditing, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <TextBlock Text="📦" FontSize="72" HorizontalAlignment="Center" 
                                   Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,20"/>
                        <TextBlock Text="No product selected" FontSize="20" FontWeight="Medium" 
                                   Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a product from the list to view and edit details" 
                                   Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center" 
                                   Margin="0,12,0,0" FontSize="15"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Background="#80F7F9FC">
            <Border Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Width="360"
                    MinHeight="120">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" Direction="270" ShadowDepth="2" Color="{StaticResource ShadowColor}" Opacity="0.15"/>
                </Border.Effect>
                <StackPanel Margin="28" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="280" Height="6"/>
                    <TextBlock Text="{Binding LoadingMessage}" Margin="0,20,0,0" FontSize="15"
                               Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>