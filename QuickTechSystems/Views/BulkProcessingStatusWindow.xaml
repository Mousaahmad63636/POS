<!-- QuickTechSystems/Views/BulkProcessingStatusWindow.xaml -->
<Window x:Class="QuickTechSystems.WPF.Views.BulkProcessingStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
        mc:Ignorable="d"
        Title="Bulk Processing Status" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <!-- Add the resources section at the top of the window -->
    <Window.Resources>
        <local:VisibilityConverter x:Key="VisibilityConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding StatusMessage}" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>

        <!-- Progress information -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <ProgressBar Value="{Binding ProgressPercentage}" 
                             Height="22" 
                             Margin="0,0,0,5"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="{Binding ProgressPercentage, StringFormat={}{0}% complete}"
                               FontWeight="SemiBold"/>

                    <TextBlock Grid.Column="1" 
                               Text="{Binding TimeElapsed, StringFormat=Elapsed: {0}}"
                               HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <Border Grid.Column="1" 
                    Background="#F5F5F5" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Padding="10,5" 
                    Margin="10,0,0,0" 
                    CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="{Binding SuccessRate, StringFormat=Success Rate: {0}%}" 
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Counters -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="#EBF5FB" 
                    BorderBrush="#AED6F1" 
                    BorderThickness="1" 
                    Padding="10,5" 
                    Margin="0,0,5,0" 
                    CornerRadius="4">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TotalItems}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Total Items" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" 
                    Background="#E8F8F5" 
                    BorderBrush="#A3E4D7" 
                    BorderThickness="1" 
                    Padding="10,5" 
                    Margin="5,0,5,0" 
                    CornerRadius="4">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding CompletedItems}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#27AE60"/>
                    <TextBlock Text="Completed" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" 
                    Background="#FDEDEC" 
                    BorderBrush="#F5B7B1" 
                    BorderThickness="1" 
                    Padding="10,5" 
                    Margin="5,0,5,0" 
                    CornerRadius="4">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding FailedItems}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#C0392B"/>
                    <TextBlock Text="Failed" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" 
                    Background="#FEF9E7" 
                    BorderBrush="#F9E79F" 
                    BorderThickness="1" 
                    Padding="10,5" 
                    Margin="5,0,0,0" 
                    CornerRadius="4">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{Binding QueuedItems}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#F39C12"/>
                    <TextBlock Text="Queued" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Tab control for logs and errors -->
        <TabControl Grid.Row="3" Margin="0,0,0,10">
            <TabItem Header="Log">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding LogMessages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                           TextWrapping="Wrap" 
                                           Margin="0,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Errors" 
                     Visibility="{Binding FailedItems, Converter={StaticResource VisibilityConverter}, ConverterParameter=0}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ErrorCategories}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander Header="{Binding Category, StringFormat={}{0} ({1} items), Path=Count}" 
                                          Margin="0,5,0,0">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Description}" 
                                                   Margin="20,5,0,5" 
                                                   TextWrapping="Wrap" 
                                                   Foreground="#555555"/>
                                    </StackPanel>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Information panel -->
        <TextBlock Grid.Row="4" 
                   TextWrapping="Wrap" 
                   Margin="0,0,0,10" 
                   Foreground="#666666">
            <Run Text="Note: Items are processed in batches to optimize performance. Failed items can be retried once processing is complete." />
        </TextBlock>

        <!-- Button panel -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="Retry Failed Items" 
                    Command="{Binding RetryCommand}" 
                    Padding="15,5" 
                    HorizontalAlignment="Left"
                    IsEnabled="{Binding CanRetry}"
                    Visibility="{Binding FailedItems, Converter={StaticResource VisibilityConverter}, ConverterParameter=0}"/>

            <Button Grid.Column="1" 
                    Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Padding="15,5" 
                    Margin="0,0,10,0"
                    IsEnabled="{Binding IsProcessing}"/>

            <Button Grid.Column="2" 
                    Content="Close" 
                    Command="{Binding CloseCommand}" 
                    Padding="15,5"/>
        </Grid>
    </Grid>
</Window>