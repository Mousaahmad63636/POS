<Window x:Class="QuickTechSystems.WPF.Views.QuickCategoryDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
        mc:Ignorable="d"
        Title="Add New Category" 
        Height="220" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="8" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" 
                             ShadowDepth="3" 
                             Opacity="0.2" 
                             Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Border Background="White" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header with Draggable Area -->
                    <Border Grid.Row="0" Background="#FAFAFA" CornerRadius="8,8,0,0">
                        <Grid x:Name="HeaderPanel" Height="40" MouseLeftButtonDown="HeaderPanel_MouseLeftButtonDown">
                            <TextBlock Text="Add New Category" 
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center"
                                      Margin="20,0,0,0"/>
                            <Button Content="✕" 
                                    Click="CloseButton_Click"
                                    Width="30" 
                                    Height="30"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="#777777"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                           CornerRadius="15">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFE0E0E0"/>
                                                <Setter Property="Foreground" Value="#E53935"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" Margin="20,15">
                        <TextBlock Text="Category Name" 
                                 FontSize="13" 
                                 FontWeight="SemiBold" 
                                 Margin="0,0,0,4" 
                                 Foreground="#555555"/>
                        <TextBox x:Name="NameTextBox" 
                                Height="32"
                                Padding="8,0"
                                VerticalContentAlignment="Center"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                Margin="0,0,0,15">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!-- Footer -->
                    <Grid Grid.Row="2" Background="#FAFAFA">
                        <Grid Margin="20,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="1"
                                    Content="Cancel"
                                    Click="CancelButton_Click"
                                    Width="100"
                                    Height="34"
                                    Margin="0,0,10,0"
                                    Background="#F2F2F2"
                                    Foreground="#333333"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button Grid.Column="2"
                                    Content="Add"
                                    Click="AddButton_Click"
                                    Width="100" 
                                    Height="34"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                           BorderThickness="0"
                                                           CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#388E3C"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#2E7D32"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>