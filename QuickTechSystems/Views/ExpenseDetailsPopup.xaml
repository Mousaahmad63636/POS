<!-- File: QuickTechSystems.WPF.Views.ExpenseDetailsPopup.xaml -->
<UserControl x:Class="QuickTechSystems.WPF.Views.ExpenseDetailsPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
             mc:Ignorable="d"
             x:Name="ExpenseDetailsPopupRoot"
             FlowDirection="{Binding FlowDirection}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <!-- Main Popup Container -->
    <Grid Background="#80000000">
        <!-- Card Container -->
        <Border Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                MaxWidth="650"
                Width="650"
                Margin="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                         ShadowDepth="3" 
                         Opacity="0.2" 
                         Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#FAFAFA">
                    <Grid Margin="24,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{DynamicResource Expense_Title}"
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="#333333"/>

                        <Button Grid.Column="1"
                                Content="✕"
                                Click="CloseButton_Click"
                                Width="24"
                                Height="24"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#999999"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="12"
                                            Width="{TemplateBinding Width}"
                                            Height="{TemplateBinding Height}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F0F0"/>
                                            <Setter Property="Foreground" Value="#333333"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Form Content -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto">
                    <Grid Margin="24,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="{DynamicResource Expense_Reason}" 
                                      FontSize="13" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,8" 
                                      Foreground="#555555"/>
                            <TextBox Text="{Binding CurrentExpense.Reason, UpdateSourceTrigger=PropertyChanged}"
                                    Height="40"
                                    Padding="12,0"
                                    VerticalContentAlignment="Center"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Margin="0,0,0,16">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <TextBlock Text="{DynamicResource Expense_Amount}" 
                                      FontSize="13" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,8" 
                                      Foreground="#555555"/>
                            <TextBox Text="{Binding CurrentExpense.Amount, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                                    Height="40"
                                    Padding="12,0"
                                    VerticalContentAlignment="Center"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Margin="0,0,0,16">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <TextBlock Text="{DynamicResource Expense_Category}" 
                                      FontSize="13" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,8" 
                                      Foreground="#555555"/>
                            <ComboBox ItemsSource="{Binding Categories}"
                                     SelectedItem="{Binding CurrentExpense.Category}"
                                     Height="40"
                                     Padding="12,0"
                                     VerticalContentAlignment="Center"
                                     BorderBrush="#DDDDDD"
                                     BorderThickness="1"
                                     Margin="0,0,0,16">
                                <ComboBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </ComboBox.Resources>
                            </ComboBox>

                            <TextBlock Text="{DynamicResource Expense_Date}" 
                                      FontSize="13" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,8" 
                                      Foreground="#555555"/>
                            <DatePicker SelectedDate="{Binding CurrentExpense.Date}"
                                       Height="40"
                                       Padding="12,0"
                                       VerticalContentAlignment="Center"
                                       BorderBrush="#DDDDDD"
                                       BorderThickness="1"
                                       Margin="0,0,0,16">
                                <DatePicker.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </StackPanel>

                        <!-- Notes -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Margin="0,10,0,0">
                            <TextBlock Text="{DynamicResource Expense_Notes}" 
                                      FontSize="13" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,8" 
                                      Foreground="#555555"/>
                            <TextBox Text="{Binding CurrentExpense.Notes}"
                                    Height="80"
                                    Padding="12,8"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Margin="0,0,0,16">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Active Status -->
                        <CheckBox Grid.Column="0" Grid.Row="2"
                                 Content="{DynamicResource Expense_IsRecurring}" 
                                 IsChecked="{Binding CurrentExpense.IsRecurring}" 
                                 Margin="0,4,0,8"
                                 FontSize="13">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Foreground" Value="#555555"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </ScrollViewer>

                <!-- Footer with Action Buttons -->
                <Border Grid.Row="2" Background="#FAFAFA">
                    <Grid Margin="24,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                                Content="{DynamicResource Expense_Delete}"
                                Command="{Binding DeleteCommand}"
                                CommandParameter="{Binding CurrentExpense}"
                                Click="DeleteButton_Click"
                                Width="110"
                                Height="40"
                                Margin="0,0,12,0"
                                Background="#E53935"
                                Foreground="White"
                                Cursor="Hand"
                                Visibility="{Binding IsNewExpense, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderThickness="0"
                                                       CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C62828"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#B71C1C"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="2"
                                Content="{DynamicResource Expense_Save}"
                                Command="{Binding SaveCommand}"
                                Click="SaveButton_Click"
                                Width="110" 
                                Height="40"
                                Background="#4CAF50"
                                Foreground="White"
                                Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderThickness="0"
                                                       CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#388E3C"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#2E7D32"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>