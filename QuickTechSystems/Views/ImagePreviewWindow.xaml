<!-- Path: QuickTechSystems.WPF.Views/ImagePreviewWindow.xaml -->
<Window x:Class="QuickTechSystems.WPF.Views.ImagePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Preview" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="PreviewImage" Stretch="None"/>
        </ScrollViewer>
        <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Width="75" Height="25" Margin="0,0,10,10" Click="CloseButton_Click"/>
    </Grid>
</Window>