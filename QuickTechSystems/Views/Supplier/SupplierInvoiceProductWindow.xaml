<Window x:Class="QuickTechSystems.WPF.Views.SupplierInvoiceProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Products - Invoice"
        Height="700" Width="1200"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#BBBBBB"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Add/Edit Products" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding Invoice.InvoiceNumber, StringFormat='Invoice: {0}', FallbackValue='Invoice: Loading...'}" 
                               FontSize="14" Foreground="#E3F2FD" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding Invoice.SupplierName, StringFormat='Supplier: {0}', FallbackValue='Supplier: Loading...'}" 
                               FontSize="12" Foreground="#E3F2FD"/>
                </StackPanel>

                <Button Grid.Column="1" Content="✕" Click="CloseButton_Click"
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        FontSize="16" Width="30" Height="30" VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <!-- Instructions -->
        <Border Grid.Row="1" Background="#FFF3E0" BorderBrush="#FFB74D" BorderThickness="0,0,0,1" Padding="15,10">
            <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#E65100">
                <Run Text="💡 Instructions: "/>
                <Run Text="Enter product details in the grid below. Use Tab to move between cells. "/>
                <Run Text="Enter a barcode to auto-fill product information, or fill manually. "/>
                <Run Text="Click 'Add Row' or press Enter on the last row to add more products."/>
            </TextBlock>
        </Border>

        <!-- Main Product Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Existing Products -->
                <DataGrid Grid.Row="0" ItemsSource="{Binding InvoiceDetails}" 
                          SelectedItem="{Binding SelectedDetail}"
                          Style="{StaticResource DataGridStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          Margin="10">

                    <DataGrid.Columns>
                        <!-- Product Name -->
                        <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="150" IsReadOnly="False"/>

                        <!-- Product Barcode -->
                        <DataGridTextColumn Header="Item Barcode" Binding="{Binding ProductBarcode}" Width="120" IsReadOnly="False"/>

                        <!-- Box Barcode -->
                        <DataGridTextColumn Header="Box Barcode" Binding="{Binding BoxBarcode}" Width="120" IsReadOnly="False"/>

                        <!-- Category -->
                        <DataGridTemplateColumn Header="Category" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CategoryName}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.Categories, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedValue="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}"
                                              SelectedValuePath="Name"
                                              DisplayMemberPath="Name"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <!-- Quantity -->
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity, StringFormat=N2}" Width="80" IsReadOnly="False"/>

                        <!-- Purchase Price -->
                        <DataGridTextColumn Header="Purchase Price" Binding="{Binding PurchasePrice, StringFormat=C2}" Width="100" IsReadOnly="False"/>

                        <!-- Total Price (Calculated) -->
                        <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat=C2}" Width="100" IsReadOnly="True"/>

                        <!-- Items Per Box -->
                        <DataGridTextColumn Header="Items/Box" Binding="{Binding ItemsPerBox}" Width="80" IsReadOnly="False"/>

                        <!-- Number of Boxes -->
                        <DataGridTextColumn Header="Boxes" Binding="{Binding NumberOfBoxes}" Width="60" IsReadOnly="False"/>

                        <!-- Current Stock -->
                        <DataGridTextColumn Header="Current Stock" Binding="{Binding CurrentStock, StringFormat=N2}" Width="90" IsReadOnly="True"/>

                        <!-- Storehouse -->
                        <DataGridTextColumn Header="Storehouse" Binding="{Binding Storehouse, StringFormat=N2}" Width="90" IsReadOnly="True"/>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="🗑️" 
                                                Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Remove Product"
                                                Style="{StaticResource RoundedButtonStyle}"
                                                Background="#E74C3C" Foreground="White"/>
                                        <Button Content="📋" 
                                                Command="{Binding DataContext.GenerateBarcodeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Generate Barcode"
                                                Style="{StaticResource RoundedButtonStyle}"
                                                Background="#3498DB" Foreground="White"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- New Product Row -->
                <Border Grid.Row="1" Background="#E8F5E8" BorderBrush="#4CAF50" BorderThickness="2" 
                        Margin="10,0,10,10" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="➕ Add New Product" FontWeight="Bold" 
                                   Foreground="#2E7D32" FontSize="14" Margin="0,0,0,10"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Labels -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Product Name" FontSize="10" Margin="2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Item Barcode" FontSize="10" Margin="2"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Box Barcode" FontSize="10" Margin="2"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Category" FontSize="10" Margin="2"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Quantity" FontSize="10" Margin="2"/>
                            <TextBlock Grid.Row="0" Grid.Column="5" Text="Purchase Price" FontSize="10" Margin="2"/>
                            <TextBlock Grid.Row="0" Grid.Column="6" Text="Total Price" FontSize="10" Margin="2"/>
                            <TextBlock Grid.Row="0" Grid.Column="7" Text="Items/Box" FontSize="10" Margin="2"/>

                            <!-- Input Controls -->
                            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding NewProductRow.ProductName, UpdateSourceTrigger=PropertyChanged}" Margin="2" Padding="4"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewProductRow.ProductBarcode, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="2" Padding="4" x:Name="BarcodeTextBox" LostFocus="BarcodeTextBox_LostFocus"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding NewProductRow.BoxBarcode, UpdateSourceTrigger=PropertyChanged}" Margin="2" Padding="4"/>

                            <ComboBox Grid.Row="1" Grid.Column="3" 
                                      ItemsSource="{Binding Categories}"
                                      SelectedValue="{Binding NewProductRow.CategoryName}"
                                      SelectedValuePath="Name"
                                      DisplayMemberPath="Name"
                                      Margin="2" Padding="4"/>

                            <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding NewProductRow.Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="2" Padding="4" LostFocus="CalculationTextBox_LostFocus"/>
                            <TextBox Grid.Row="1" Grid.Column="5" Text="{Binding NewProductRow.PurchasePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                                     Margin="2" Padding="4" LostFocus="CalculationTextBox_LostFocus"/>
                            <TextBox Grid.Row="1" Grid.Column="6" Text="{Binding NewProductRow.TotalPrice, StringFormat=C2}" IsReadOnly="True" Background="#F5F5F5" Margin="2" Padding="4"/>
                            <TextBox Grid.Row="1" Grid.Column="7" Text="{Binding NewProductRow.ItemsPerBox, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="2" Padding="4" LostFocus="CalculationTextBox_LostFocus"/>

                            <Button Grid.Row="1" Grid.Column="8" Content="Add Product" 
                                    Command="{Binding AddProductCommand}"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#4CAF50" Foreground="White"
                                    Margin="5,2"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Summary -->
        <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="{Binding InvoiceDetails.Count, StringFormat='Total Products: {0}', FallbackValue='Total Products: 0'}" 
                               FontWeight="Medium" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding HasChanges, StringFormat='Has Changes: {0}', FallbackValue='Has Changes: False'}" 
                               Margin="20,0,0,0" VerticalAlignment="Center"
                               Foreground="{Binding HasChanges, Converter={StaticResource BooleanToBrushConverter}}"/>
                </StackPanel>

                <TextBlock Grid.Column="1" 
                           Text="{Binding InvoiceDetails, Converter={StaticResource CollectionSumConverter}, ConverterParameter=TotalPrice, StringFormat='Invoice Total: {0:C2}', FallbackValue='Invoice Total: $0.00'}"
                           FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

                <CheckBox Grid.Column="2" Content="Auto-calculate totals" IsChecked="True" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="4" Background="White" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save Changes" 
                        Command="{Binding SaveChangesCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#4CAF50" Foreground="White"
                        IsEnabled="{Binding HasChanges}"/>

                <Button Content="Cancel" 
                        Command="{Binding CancelChangesCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#757575" Foreground="White"/>

                <Button Content="Close" 
                        Click="CloseButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#2196F3" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="5" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" CornerRadius="8" Width="200" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="150" Height="6" Margin="0,0,0,15"/>
                    <TextBlock Text="Loading..." HorizontalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>