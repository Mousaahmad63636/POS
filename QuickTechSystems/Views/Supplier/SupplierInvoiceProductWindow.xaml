<Window x:Class="QuickTechSystems.WPF.Views.SupplierInvoiceProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice Product Management"
        Height="800" Width="1400"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        KeyDown="Window_KeyDown"
        Background="#F8F9FA">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button -->
        <Style x:Key="SuccessButton" BasedOn="{StaticResource ModernButton}" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button -->
        <Style x:Key="DangerButton" BasedOn="{StaticResource ModernButton}" TargetType="Button">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" BasedOn="{StaticResource ModernButton}" TargetType="Button">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <!-- Modern DataGrid Header Style -->
        <Style x:Key="ModernDataGridHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Modern DataGrid Cell Style -->
        <Style x:Key="ModernDataGridCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="White" Padding="32,24">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="📦 Invoice Product Management" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#212529" 
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Invoice: " 
                                   FontSize="14" 
                                   Foreground="#6C757D"/>
                        <TextBlock Text="{Binding Invoice.InvoiceNumber, FallbackValue='Loading...'}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#007ACC"/>
                        <TextBlock Text=" • Supplier: " 
                                   FontSize="14" 
                                   Foreground="#6C757D" 
                                   Margin="12,0,0,0"/>
                        <TextBlock Text="{Binding Invoice.SupplierName, FallbackValue='Loading...'}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#007ACC"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" 
                        Click="CloseButton_Click"
                        Style="{StaticResource IconButton}"
                        ToolTip="Close Window">
                    <TextBlock Text="✕" FontSize="16" Foreground="#6C757D"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32">
            <StackPanel>

                <!-- Quick Add Section -->
                <Border Style="{StaticResource ModernCard}" Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="#E3F2FD" 
                                    CornerRadius="50" 
                                    Width="40" 
                                    Height="40" 
                                    Margin="0,0,16,0">
                                <TextBlock Text="⚡" 
                                           FontSize="18" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="Quick Add Product" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="#212529"/>
                                <TextBlock Text="Scan barcode or create new product" 
                                           FontSize="12" 
                                           Foreground="#6C757D"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <TextBox x:Name="QuickBarcodeTextBox"
                                     Text="{Binding NewProductRow.ProductBarcode, UpdateSourceTrigger=PropertyChanged}"
                                     LostFocus="BarcodeTextBox_LostFocus"
                                     Width="300"
                                     Style="{StaticResource ModernTextBox}"
                                     Tag="🔍 Scan or enter barcode..."/>
                            <TextBlock Text="OR" 
                                       VerticalAlignment="Center" 
                                       Margin="20,0" 
                                       FontWeight="SemiBold" 
                                       Foreground="#6C757D"/>
                        </StackPanel>

                        <Button Grid.Column="2" 
                                Content="➕ Create New Product"
                                Command="{Binding OpenNewProductDialogCommand}"
                                Style="{StaticResource SuccessButton}"
                                MinWidth="180"/>
                    </Grid>
                </Border>

                <!-- Products List Section -->
                <Border Style="{StaticResource ModernCard}" Margin="0,0,0,0">
                    <StackPanel>
                        <!-- Section Header -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="📋 Invoice Products" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#212529"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <Border Background="#E3F2FD" 
                                            CornerRadius="12" 
                                            Padding="8,4">
                                        <TextBlock Text="{Binding InvoiceDetails.Count, StringFormat={}{0} Products}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#1976D2"/>
                                    </Border>
                                    <Border Background="#FFF3E0" 
                                            CornerRadius="12" 
                                            Padding="8,4" 
                                            Margin="8,0,0,0"
                                            Visibility="{Binding HasChanges, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="⚠ Unsaved Changes" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#F57C00"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Content="🔄 Refresh Data"
                                    Command="{Binding LoadDataCommand}"
                                    Style="{StaticResource SecondaryButton}"/>
                        </Grid>

                        <!-- Products DataGrid -->
                        <DataGrid ItemsSource="{Binding InvoiceDetails}" 
                                  SelectedItem="{Binding SelectedDetail}"
                                  Style="{StaticResource ModernDataGrid}"
                                  ColumnHeaderStyle="{StaticResource ModernDataGridHeader}"
                                  CellStyle="{StaticResource ModernDataGridCell}"
                                  MinHeight="400">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Product Name" 
                                                    Binding="{Binding ProductName}" 
                                                    Width="200" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Header="Barcode" 
                                                    Binding="{Binding ProductBarcode}" 
                                                    Width="120" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Header="Category" 
                                                    Binding="{Binding CategoryName}" 
                                                    Width="100" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Header="Quantity" 
                                                    Binding="{Binding Quantity, StringFormat=N2}" 
                                                    Width="80"/>
                                <DataGridTextColumn Header="Unit Price" 
                                                    Binding="{Binding PurchasePrice, StringFormat=C2}" 
                                                    Width="100"/>
                                <DataGridTextColumn Header="Total" 
                                                    Binding="{Binding TotalPrice, StringFormat=C2}" 
                                                    Width="100" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Header="Stock" 
                                                    Binding="{Binding CurrentStock, StringFormat=N2}" 
                                                    Width="80" 
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Header="Storehouse" 
                                                    Binding="{Binding Storehouse, StringFormat=N2}" 
                                                    Width="100" 
                                                    IsReadOnly="True"/>

                                <DataGridTemplateColumn Header="Actions" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource IconButton}"
                                                        ToolTip="Remove Product"
                                                        Margin="0,0,4,0">
                                                    <TextBlock Text="🗑️" FontSize="14"/>
                                                </Button>
                                                <Button Command="{Binding DataContext.GenerateBarcodeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource IconButton}"
                                                        ToolTip="Generate Barcode">
                                                    <TextBlock Text="📋" FontSize="14"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Empty State -->
                        <Border Visibility="{Binding InvoiceDetails.Count, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Background="#F8F9FA" 
                                CornerRadius="8" 
                                Padding="40" 
                                Margin="0,20,0,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding InvoiceDetails.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="No products added yet" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           HorizontalAlignment="Center" 
                                           Foreground="#6C757D" 
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Scan a barcode above or create a new product to get started" 
                                           FontSize="14" 
                                           HorizontalAlignment="Center" 
                                           Foreground="#ADB5BD" 
                                           Margin="0,0,0,20"/>
                                <Button Content="➕ Create Your First Product"
                                        Command="{Binding OpenNewProductDialogCommand}"
                                        Style="{StaticResource SuccessButton}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" 
                Background="White" 
                Padding="32,20" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#E9ECEF">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="💡 Tip: Products are automatically saved when created. Use Ctrl+S to save manual changes."
                           FontSize="12" 
                           Foreground="#6C757D" 
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="💾 Save Changes" 
                            Command="{Binding SaveChangesCommand}"
                            Style="{StaticResource SuccessButton}"
                            IsEnabled="{Binding HasChanges}"
                            Margin="0,0,12,0"/>
                    <Button Content="↩️ Cancel Changes" 
                            Command="{Binding CancelChangesCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,12,0"/>
                    <Button Content="✅ Close" 
                            Click="CloseButton_Click"
                            Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" 
              Background="#80FFFFFF" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" 
                    CornerRadius="12" 
                    Width="200" 
                    Height="120" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="120" 
                                 Height="4" 
                                 Margin="0,0,0,16"
                                 Background="#E9ECEF"
                                 Foreground="#007ACC"/>
                    <TextBlock Text="Loading..." 
                               HorizontalAlignment="Center" 
                               FontSize="14" 
                               Foreground="#6C757D"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- New Product Dialog Modal -->
        <Grid Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsNewProductDialogOpen, Converter={StaticResource BooleanToVisibilityConverter}}" 
              Panel.ZIndex="100">
            <Border Background="White" 
                    CornerRadius="16" 
                    Width="1000" 
                    Height="700" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>

                <Grid Margin="32">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="➕ Create New Product" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#212529" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Fill in the product details below. Required fields are marked with *" 
                                       FontSize="14" 
                                       Foreground="#6C757D"/>
                        </StackPanel>

                        <Button Grid.Column="1" 
                                Command="{Binding CancelNewProductCommand}"
                                Style="{StaticResource IconButton}">
                            <TextBlock Text="✕" FontSize="16" Foreground="#6C757D"/>
                        </Button>
                    </Grid>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Left Column -->
                            <!-- Product Name -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,16">
                                <TextBlock Text="Product Name *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewProductFromInvoice.Name, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Barcode -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,16">
                                <TextBlock Text="Barcode *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewProductFromInvoice.Barcode, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Category -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,16">
                                <TextBlock Text="Category *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding Categories}"
                                          SelectedValue="{Binding NewProductFromInvoice.CategoryId}"
                                          SelectedValuePath="CategoryId"
                                          DisplayMemberPath="Name"
                                          Height="44"
                                          Padding="12,10"
                                          FontSize="14"/>
                            </StackPanel>

                            <!-- Purchase Price -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,16">
                                <TextBlock Text="Purchase Price *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewProductFromInvoice.PurchasePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Sale Price -->
                            <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,0,16">
                                <TextBlock Text="Sale Price *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewProductFromInvoice.SalePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Right Column -->
                            <!-- Invoice Quantity -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,16">
                                <TextBlock Text="Invoice Quantity *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewProductFromInvoice.InvoiceQuantity, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Current Stock -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,16">
                                <TextBlock Text="Current Stock" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewProductFromInvoice.CurrentStock, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Storehouse -->
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,16">
                                <TextBlock Text="Storehouse" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewProductFromInvoice.Storehouse, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Minimum Stock -->
                            <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,16">
                                <TextBlock Text="Minimum Stock" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewProductFromInvoice.MinimumStock, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Wholesale Price -->
                            <StackPanel Grid.Row="4" Grid.Column="2" Margin="0,0,0,16">
                                <TextBlock Text="Wholesale Price" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewProductFromInvoice.WholesalePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Description (Full Width) -->
                            <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,16">
                                <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewProductFromInvoice.Description, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"
                                         Height="80"
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True" 
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>

                    <!-- Validation Message -->
                    <Border Grid.Row="2" 
                            Background="#FEF2F2" 
                            BorderBrush="#FECACA" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,16,0,16" 
                            Visibility="{Binding HasNewProductValidationMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" FontSize="16" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding NewProductValidationMessage}" 
                                       Foreground="#991B1B" 
                                       TextWrapping="Wrap" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Modal Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" 
                                Command="{Binding CancelNewProductCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,0"/>
                        <Button Content="✅ Create Product" 
                                Command="{Binding SaveNewProductCommand}"
                                Style="{StaticResource SuccessButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>