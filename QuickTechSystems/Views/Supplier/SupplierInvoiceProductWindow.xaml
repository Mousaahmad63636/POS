<!-- File: QuickTechSystems\Views\Supplier\SupplierInvoiceProductWindow.xaml -->
<Window x:Class="QuickTechSystems.WPF.Views.SupplierInvoiceProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice Product Management"
        Height="800" Width="1400"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        KeyDown="Window_KeyDown"
        Background="#F8F9FA">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InvoiceDetailsTotalConverter x:Key="InvoiceDetailsTotalConverter" xmlns:local="clr-namespace:QuickTechSystems.WPF.Converters"/>
        <local:SafeDecimalConverter x:Key="SafeDecimalConverter" xmlns:local="clr-namespace:QuickTechSystems.WPF.Converters"/>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- FREE INPUT TextBox Style - No restrictions -->
        <Style x:Key="FreeInputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Padding="{TemplateBinding Padding}"
                                            VerticalAlignment="Center"/>
                                <TextBlock x:Name="PlaceholderText"
                                         Text="{TemplateBinding Tag}"
                                         Foreground="#6C757D"
                                         Padding="{TemplateBinding Padding}"
                                         VerticalAlignment="Center"
                                         IsHitTestVisible="False"
                                         Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search Results Style -->
        <Style x:Key="SearchResultsListBox" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="MaxHeight" Value="200"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0,0,8,8">
                            <ScrollViewer x:Name="PART_ScrollViewer" 
                                        Padding="{TemplateBinding Padding}"
                                        VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#E9ECEF">
            <Grid Margin="32,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="📦 Invoice Product Management" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#212529"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="• Invoice: " 
                                   FontSize="14" 
                                   Foreground="#6C757D"/>
                        <TextBlock Text="{Binding Invoice.InvoiceNumber, FallbackValue='Loading...'}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#007ACC"/>
                        <TextBlock Text=" • Supplier: " 
                                   FontSize="14" 
                                   Foreground="#6C757D" 
                                   Margin="12,0,0,0"/>
                        <TextBlock Text="{Binding Invoice.SupplierName, FallbackValue='Loading...'}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#007ACC"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" 
                        Click="CloseButton_Click"
                        Style="{StaticResource IconButton}"
                        ToolTip="Close Window">
                    <TextBlock Text="✕" FontSize="16" Foreground="#6C757D"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32">
            <StackPanel>

                <!-- Quick Add Section -->
                <Border Style="{StaticResource ModernCard}" Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header Section -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="#E3F2FD" 
                                    CornerRadius="50" 
                                    Width="40" 
                                    Height="40" 
                                    Margin="0,0,16,0">
                                <TextBlock Text="⚡" 
                                           FontSize="18" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="Quick Add Product" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="#212529"/>
                                <TextBlock Text="Scan barcode or search by name to instantly add to invoice" 
                                           FontSize="12" 
                                           Foreground="#6C757D"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="2" Grid.Row="0" 
                                Content="➕ Create New Product"
                                Command="{Binding OpenNewProductDialogCommand}"
                                Style="{StaticResource SuccessButton}"
                                MinWidth="180"/>

                        <!-- Search Options Section -->
                        <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Barcode Search -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="🔍 Scan or Enter Barcode" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           Margin="0,0,0,8" 
                                           Foreground="#495057"/>
                                <TextBox x:Name="QuickBarcodeTextBox"
                                         Text="{Binding QuickBarcodeSearch, UpdateSourceTrigger=PropertyChanged}"
                                         LostFocus="BarcodeTextBox_LostFocus"
                                         KeyDown="QuickBarcodeTextBox_KeyDown"
                                         Style="{StaticResource FreeInputTextBox}"
                                         Tag="Enter or scan product barcode..."/>
                            </StackPanel>

                            <!-- OR Separator -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <Border Background="#E9ECEF" 
                                        CornerRadius="12" 
                                        Padding="12,6">
                                    <TextBlock Text="OR" 
                                               FontWeight="SemiBold" 
                                               FontSize="12"
                                               Foreground="#6C757D"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>

                            <!-- Product Name Search -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="📝 Search by Product Name" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           Margin="0,0,0,8" 
                                           Foreground="#495057"/>
                                <Grid>
                                    <TextBox x:Name="ProductNameSearchTextBox"
                                             Text="{Binding ProductNameSearch, UpdateSourceTrigger=PropertyChanged}"
                                             KeyDown="ProductNameSearchTextBox_KeyDown"
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="Type product name to search..."/>

                                    <!-- Search Results Popup -->
                                    <Popup IsOpen="{Binding ShowSearchResults}" 
                                           PlacementTarget="{Binding ElementName=ProductNameSearchTextBox}"
                                           Placement="Bottom"
                                           AllowsTransparency="True"
                                           StaysOpen="False">
                                        <Border Background="White"
                                                BorderBrush="#E9ECEF"
                                                BorderThickness="1"
                                                CornerRadius="0,0,8,8">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="#000000"/>
                                            </Border.Effect>
                                            <ListBox ItemsSource="{Binding SearchResults}"
                                                     SelectedItem="{Binding SelectedSearchResult}"
                                                     Style="{StaticResource SearchResultsListBox}"
                                                     Width="{Binding ActualWidth, ElementName=ProductNameSearchTextBox}">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Style="{StaticResource IconButton}"
                                                                Command="{Binding DataContext.SelectSearchResultCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"
                                                                HorizontalAlignment="Stretch"
                                                                HorizontalContentAlignment="Left">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="{Binding Name}" 
                                                                               FontWeight="SemiBold" 
                                                                               FontSize="13"/>
                                                                    <TextBlock Text="{Binding Barcode}" 
                                                                               FontSize="11" 
                                                                               Foreground="#6C757D"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                                    <TextBlock Text="{Binding PurchasePrice, StringFormat=C}" 
                                                                               FontWeight="SemiBold" 
                                                                               FontSize="12" 
                                                                               Foreground="#28A745"/>
                                                                    <TextBlock Text="{Binding CurrentStock}" 
                                                                               FontSize="11" 
                                                                               Foreground="#6C757D"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Button>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Padding" Value="0"/>
                                                        <Setter Property="Margin" Value="0"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <ContentPresenter/>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                            </ListBox>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Products List Section -->
                <Border Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <!-- Section Header -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="📋 Invoice Products" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#212529"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <Border Background="#E3F2FD" 
                                            CornerRadius="12" 
                                            Padding="8,4">
                                        <TextBlock FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#007ACC">
                                            <TextBlock.Text>
                                                <Binding Path="InvoiceDetails.Count" StringFormat="{}{0} Products"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Border>
                                    <Border Background="#FFF3CD" 
                                            CornerRadius="12" 
                                            Padding="8,4" 
                                            Margin="8,0,0,0">
                                        <TextBlock Text="{Binding InvoiceDetails, Converter={StaticResource InvoiceDetailsTotalConverter}, StringFormat='Total: ${0:N2}'}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#856404"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="💾 Save Changes"
            Command="{Binding SaveChangesCommand}"
            Style="{StaticResource ModernButton}"
            Margin="0,0,8,0"
            MinWidth="140"/>
                                <Button Content="💾 Save and Close"
            Command="{Binding SaveAndCloseCommand}"
            Style="{StaticResource SuccessButton}"
            Margin="0,0,12,0"
            MinWidth="140"/>
                                <Button Content="🔄 Refresh"
            Command="{Binding LoadDataCommand}"
            Style="{StaticResource ModernButton}"
            MinWidth="100"/>
                            </StackPanel>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid ItemsSource="{Binding InvoiceDetails}"
                                  SelectedItem="{Binding SelectedDetail}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False"
                                  CanUserSortColumns="False"
                                  SelectionMode="Single"
                                  SelectionUnit="Cell"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  Background="White"
                                  BorderThickness="1"
                                  BorderBrush="#E9ECEF"
                                  RowHeight="50"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  CellEditEnding="DataGrid_CellEditEnding"
                                  CurrentCellChanged="DataGrid_CurrentCellChanged"
                                  LostFocus="DataGrid_LostFocus"
                                  BeginningEdit="DataGrid_BeginningEdit"
                                  x:Name="InvoiceDetailsDataGrid">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#495057"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="BorderBrush" Value="#E9ECEF"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F8F9FA"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="8,4">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </Trigger>
                                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                                        <Setter Property="Background" Value="#BBDEFB"/>
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <!-- Read-only columns -->
                                <DataGridTextColumn Header="Product Name" 
                                                    Binding="{Binding ProductName}" 
                                                    Width="200"
                                                    IsReadOnly="True"/>

                                <DataGridTextColumn Header="Category"
                                                    Binding="{Binding CategoryName}" 
                                                    Width="120"
                                                    IsReadOnly="True"/>

                                <DataGridTextColumn Header="Item Barcode" 
                                                    Binding="{Binding ProductBarcode}" 
                                                    Width="130"
                                                    IsReadOnly="True"/>

                                <!-- SIMPLE FREE INPUT COLUMNS - Same as BulkMainStockDialog -->
                                <DataGridTextColumn Header="Box Barcode" 
                                                    Width="130"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="BoxBarcode" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Quantity" 
                                                    Width="100"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Quantity" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Purchase Price" 
                                                    Width="120"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="PurchasePrice" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Current Stock" 
                                                    Width="110"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="CurrentStock" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Storehouse" 
                                                    Width="100"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Storehouse" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Available Boxes" 
                                                    Binding="{Binding AvailableBoxes}" 
                                                    Width="120"
                                                    IsReadOnly="True"/>

                                <DataGridTextColumn Header="Items/Box" 
                                                    Width="90"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="ItemsPerBox" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="# of Boxes" 
                                                    Width="100"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="NumberOfBoxes" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Box Purchase" 
                                                    Width="120"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="BoxPurchasePrice" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Item Purchase" 
                                                    Binding="{Binding PurchasePrice, StringFormat=C}" 
                                                    Width="120"
                                                    IsReadOnly="True"/>

                                <DataGridTextColumn Header="Sale Price" 
                                                    Width="100"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="SalePrice" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Box Sale" 
                                                    Width="100"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="BoxSalePrice" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Wholesale" 
                                                    Width="100"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="WholesalePrice" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Box Wholesale" 
                                                    Width="120"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="BoxWholesalePrice" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Min Stock" 
                                                    Width="90"
                                                    IsReadOnly="False">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="MinimumStock" 
                                                 Mode="TwoWay" 
                                                 UpdateSourceTrigger="LostFocus"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Stock Status" 
                                                    Binding="{Binding StockStatus}" 
                                                    Width="100"
                                                    IsReadOnly="True"/>

                                <DataGridTextColumn Header="Total Price" 
                                                    Binding="{Binding TotalPrice, StringFormat=C}" 
                                                    Width="110"
                                                    IsReadOnly="True"/>

                                <!-- Action column -->
                                <DataGridTemplateColumn Header="Actions" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="🗑️ Remove"
                                                    Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButton}"
                                                    Foreground="#DC3545"
                                                    FontSize="12"
                                                    Padding="8,4"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" 
                    CornerRadius="12" 
                    Padding="40,30" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏳" FontSize="24" Margin="0,0,16,0"/>
                    <TextBlock Text="Loading..." 
                               FontSize="16" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- New Product Dialog Modal -->
        <Grid Grid.Row="0" Grid.RowSpan="2" 
              Background="#80000000" 
              Visibility="{Binding IsNewProductDialogOpen, Converter={StaticResource BooleanToVisibilityConverter}}">

            <!-- Modal Container -->
            <Border Background="White" 
                    CornerRadius="16" 
                    MaxWidth="1000" 
                    MaxHeight="700"
                    Margin="50"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Border Grid.Row="0" 
                            Background="#007ACC" 
                            CornerRadius="16,16,0,0" 
                            Padding="24,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="➕ Product Management" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                                <TextBlock Text="Fill in the product details below" 
                                           FontSize="12" 
                                           Foreground="#E3F2FD" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Command="{Binding CancelNewProductCommand}"
                                    Style="{StaticResource IconButton}"
                                    Background="Transparent"
                                    Margin="8,0,0,0">
                                <TextBlock Text="✕" FontSize="16" Foreground="White"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  Padding="24">
                        <StackPanel>

                            <!-- Validation Message -->
                            <Border Background="#FFEBEE" 
                                    BorderBrush="#F44336" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,0,0,16"
                                    Visibility="{Binding HasNewProductValidationMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="{Binding NewProductValidationMessage}" 
                                           Foreground="#C62828" 
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- Basic Information Section -->
                            <TextBlock Text="📋 Basic Information" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Product Name -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Product Name *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.Name, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="Enter product name..."/>
                                </StackPanel>

                                <!-- Barcode -->
                                <!-- Item Barcode - Remove MaxLength restriction -->
                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <TextBlock Text="Barcode *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                 Text="{Binding NewProductFromInvoice.Barcode, UpdateSourceTrigger=PropertyChanged}" 
                 Style="{StaticResource FreeInputTextBox}"
                 Tag="Enter or scan barcode..."/>
                                        <Button Grid.Column="2"
                Content="🎲"
                Command="{Binding GenerateItemBarcodeCommand}"
                Style="{StaticResource IconButton}"
                Background="#28A745"
                Foreground="White"
                Width="44"
                Height="44"
                ToolTip="Generate unique barcode"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Category -->
                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <TextBlock Text="Category *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding Categories}"
                                              DisplayMemberPath="Name"
                                              SelectedValuePath="CategoryId"
                                              SelectedValue="{Binding NewProductFromInvoice.CategoryId}"
                                              Height="44"
                                              FontSize="14"/>
                                </StackPanel>

                                <!-- Supplier -->
                                <StackPanel Grid.Row="2" Grid.Column="2">
                                    <TextBlock Text="Supplier" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding Suppliers}"
                                              DisplayMemberPath="Name"
                                              SelectedValuePath="SupplierId"
                                              SelectedValue="{Binding NewProductFromInvoice.SupplierId}"
                                              Height="44"
                                              FontSize="14"/>
                                </StackPanel>

                                <!-- Description -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
                                    <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.Description, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Height="80"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"
                                             Tag="Enter product description..."/>
                                </StackPanel>
                            </Grid>

                            <!-- Pricing Section -->
                            <TextBlock Text="💰 Pricing Information" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Purchase Price - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Purchase Price *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.PurchasePrice, UpdateSourceTrigger=LostFocus, Converter={StaticResource SafeDecimalConverter}}" 
             Style="{StaticResource FreeInputTextBox}"
             Tag="0.00"/>
                                </StackPanel>

                                <!-- Sale Price - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Sale Price *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.SalePrice, UpdateSourceTrigger=LostFocus}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="0.00"/>
                                </StackPanel>

                                <!-- Wholesale Price - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Wholesale Price" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.WholesalePrice, UpdateSourceTrigger=LostFocus}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="0.00"/>
                                </StackPanel>
                            </Grid>

                            <!-- Inventory Section -->
                            <TextBlock Text="📦 Inventory Information" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Current Stock - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Current Stock to Add" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.CurrentStock, UpdateSourceTrigger=LostFocus}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="1"/>
                                </StackPanel>

                                <!-- Storehouse - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Storehouse to Add" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.Storehouse, UpdateSourceTrigger=LostFocus}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="1"/>
                                </StackPanel>

                                <!-- Minimum Stock - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Minimum Stock" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.MinimumStock, UpdateSourceTrigger=LostFocus}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Box Information Section -->
                            <TextBlock Text="📦 Box Information (Optional)" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="16"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Box Barcode - Remove MaxLength restriction -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Box Barcode" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                 Text="{Binding NewProductFromInvoice.BoxBarcode, UpdateSourceTrigger=PropertyChanged}" 
                 Style="{StaticResource FreeInputTextBox}"
                 Tag="Box barcode..."/>
                                        <Button Grid.Column="2"
                Content="🎲"
                Command="{Binding GenerateBoxBarcodeCommand}"
                Style="{StaticResource IconButton}"
                Background="#28A745"
                Foreground="White"
                Width="44"
                Height="44"
                ToolTip="Generate unique box barcode"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Items Per Box - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <TextBlock Text="Items Per Box" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.ItemsPerBox, UpdateSourceTrigger=LostFocus}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="1"/>
                                </StackPanel>

                                <!-- Number of Boxes - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Row="0" Grid.Column="4">
                                    <TextBlock Text="Number of Boxes" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.NumberOfBoxes, UpdateSourceTrigger=LostFocus}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="0"/>
                                </StackPanel>

                                <!-- Box Purchase Price - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <TextBlock Text="Box Purchase Price" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.BoxPurchasePrice, UpdateSourceTrigger=LostFocus}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="0.00"/>
                                </StackPanel>

                                <!-- Box Sale Price - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Row="2" Grid.Column="2">
                                    <TextBlock Text="Box Sale Price" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.BoxSalePrice, UpdateSourceTrigger=LostFocus}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="0.00"/>
                                </StackPanel>

                                <!-- Box Wholesale Price - Simple like BulkMainStockDialog -->
                                <StackPanel Grid.Row="2" Grid.Column="4">
                                    <TextBlock Text="Box Wholesale Price" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewProductFromInvoice.BoxWholesalePrice, UpdateSourceTrigger=LostFocus}" 
                                             Style="{StaticResource FreeInputTextBox}"
                                             Tag="0.00"/>
                                </StackPanel>
                            </Grid>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Border Grid.Row="2" 
                            Background="#F8F9FA" 
                            BorderThickness="0,1,0,0" 
                            BorderBrush="#E9ECEF" 
                            CornerRadius="0,0,16,16" 
                            Padding="24,16">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Button Content="❌ Cancel"
                                    Command="{Binding CancelNewProductCommand}"
                                    Style="{StaticResource ModernButton}"
                                    Background="#6C757D"
                                    Margin="0,0,12,0"
                                    MinWidth="120"/>
                            <Button Content="💾 Save Product"
                                    Command="{Binding SaveNewProductCommand}"
                                    Style="{StaticResource SuccessButton}"
                                    MinWidth="150"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>