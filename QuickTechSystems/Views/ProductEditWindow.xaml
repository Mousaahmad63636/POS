<!-- Path: QuickTechSystems.WPF.Views/ProductEditWindow.xaml -->
<Window x:Class="QuickTechSystems.WPF.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:QuickTechSystems.WPF.Converters"
        mc:Ignorable="d"
        Title="Edit Product" 
        Height="750" 
        Width="950"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F8F9FA">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:FilePathToImageConverter x:Key="FilePathToImageConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Professional Styles -->
        <Style TargetType="TextBox" x:Key="StandardTextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#6B7280"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox" x:Key="StandardComboBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#6B7280"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Label" x:Key="StandardLabel">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#374151"/>
        </Style>

        <Style TargetType="Label" x:Key="SectionHeaderLabel">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="0,20,0,15"/>
            <Setter Property="Foreground" Value="#1F2937"/>
        </Style>

        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="MinWidth" Value="120"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox" x:Key="StandardCheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
        </Style>

        <!-- Card Style for Sections -->
        <Style TargetType="Border" x:Key="CardBorder">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" 
                                      Direction="270" 
                                      ShadowDepth="2" 
                                      BlurRadius="8" 
                                      Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E5E7EB" 
                BorderThickness="0,0,0,1" 
                Padding="0,0,0,24" 
                Margin="0,0,0,32">
            <StackPanel>
                <TextBlock Text="Edit Product Information" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           FontFamily="Segoe UI"
                           HorizontalAlignment="Center"
                           Foreground="#1F2937"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Update product details and manage inventory information" 
                           FontSize="16" 
                           FontFamily="Segoe UI"
                           HorizontalAlignment="Center"
                           Foreground="#6B7280"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0,0,16,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Main Product Information -->
                <StackPanel Grid.Column="0">
                    <!-- Basic Information Card -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <Label Content="📋 Basic Information" Style="{StaticResource SectionHeaderLabel}" Foreground="#3B82F6"/>

                            <Label Content="Product Name*" Style="{StaticResource StandardLabel}"/>
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource StandardTextBox}"
                                     ToolTip="Enter the product name"/>

                            <Label Content="Description" Style="{StaticResource StandardLabel}"/>
                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource StandardTextBox}" 
                                     Height="80" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"
                                     VerticalContentAlignment="Top"
                                     ToolTip="Enter product description"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Content="Category*" Style="{StaticResource StandardLabel}"/>
                                    <ComboBox ItemsSource="{Binding Categories}" 
                                              SelectedValue="{Binding CategoryId}" 
                                              SelectedValuePath="CategoryId" 
                                              DisplayMemberPath="Name" 
                                              Style="{StaticResource StandardComboBox}"
                                              ToolTip="Select product category"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <Label Content="Supplier" Style="{StaticResource StandardLabel}"/>
                                    <ComboBox ItemsSource="{Binding Suppliers}" 
                                              SelectedValue="{Binding SupplierId}" 
                                              SelectedValuePath="SupplierId" 
                                              DisplayMemberPath="Name" 
                                              Style="{StaticResource StandardComboBox}"
                                              ToolTip="Select product supplier"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Barcode Information Card -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <Label Content="🏷️ Barcodes" Style="{StaticResource SectionHeaderLabel}" Foreground="#10B981"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Content="Item Barcode*" Style="{StaticResource StandardLabel}"/>
                                    <TextBox Text="{Binding Barcode, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}"
                                             ToolTip="Enter item barcode"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <Label Content="Box Barcode" Style="{StaticResource StandardLabel}"/>
                                    <TextBox Text="{Binding BoxBarcode, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}"
                                             ToolTip="Enter box barcode (optional)"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Pricing Information Card -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <Label Content="💰 Pricing Information" Style="{StaticResource SectionHeaderLabel}" Foreground="#F59E0B"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Content="Purchase Price*" Style="{StaticResource StandardLabel}"/>
                                    <TextBox Text="{Binding PurchasePrice, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}"
                                             ToolTip="Enter purchase price"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <Label Content="Wholesale Price" Style="{StaticResource StandardLabel}"/>
                                    <TextBox Text="{Binding WholesalePrice, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}"
                                             ToolTip="Enter wholesale price"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <Label Content="Sale Price*" Style="{StaticResource StandardLabel}"/>
                                    <TextBox Text="{Binding SalePrice, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}"
                                             ToolTip="Enter sale price"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Box Information Card -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <Label Content="📦 Box Information" Style="{StaticResource SectionHeaderLabel}" Foreground="#8B5CF6"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Content="Items per Box" Style="{StaticResource StandardLabel}"/>
                                    <TextBox Text="{Binding ItemsPerBox, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}"
                                             ToolTip="Number of items per box"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <Label Content="Number of Boxes" Style="{StaticResource StandardLabel}"/>
                                    <TextBox Text="{Binding NumberOfBoxes, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}"
                                             ToolTip="Total number of boxes"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label Content="Box Purchase Price" Style="{StaticResource StandardLabel}"/>
                                    <TextBox Text="{Binding BoxPurchasePrice, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}"
                                             ToolTip="Purchase price per box"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <Label Content="Box Wholesale Price" Style="{StaticResource StandardLabel}"/>
                                    <TextBox Text="{Binding BoxWholesalePrice, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}"
                                             ToolTip="Wholesale price per box"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <Label Content="Box Sale Price" Style="{StaticResource StandardLabel}"/>
                                    <TextBox Text="{Binding BoxSalePrice, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource StandardTextBox}"
                                             ToolTip="Sale price per box"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column - Stock and Additional Information -->
                <StackPanel Grid.Column="2">
                    <!-- Stock Information Card -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <Label Content="📊 Stock Information" Style="{StaticResource SectionHeaderLabel}" Foreground="#EF4444"/>

                            <Label Content="Current Stock" Style="{StaticResource StandardLabel}"/>
                            <TextBox Text="{Binding CurrentStock, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource StandardTextBox}"
                                     ToolTip="Current stock quantity"/>

                            <Label Content="Minimum Stock" Style="{StaticResource StandardLabel}"/>
                            <TextBox Text="{Binding MinimumStock, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource StandardTextBox}"
                                     ToolTip="Minimum stock threshold"/>

                            <Label Content="Minimum Box Stock" Style="{StaticResource StandardLabel}"/>
                            <TextBox Text="{Binding MinimumBoxStock, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource StandardTextBox}"
                                     ToolTip="Minimum box stock threshold"/>
                        </StackPanel>
                    </Border>

                    <!-- Additional Information Card -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <Label Content="ℹ️ Additional Information" Style="{StaticResource SectionHeaderLabel}" Foreground="#6366F1"/>

                            <Label Content="Speed" Style="{StaticResource StandardLabel}"/>
                            <TextBox Text="{Binding Speed, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource StandardTextBox}"
                                     ToolTip="Product speed category"/>

                            <Label Content="Image Path" Style="{StaticResource StandardLabel}"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" 
                                         Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource StandardTextBox}"
                                         ToolTip="Path to product image"/>
                                <Button Grid.Row="1" 
                                        Content="📁 Browse..." 
                                        Click="BrowseImage_Click" 
                                        Padding="12,8" 
                                        HorizontalAlignment="Left" 
                                        Margin="0,0,0,15"
                                        Background="#F3F4F6"
                                        BorderBrush="#D1D5DB"
                                        BorderThickness="1"
                                        Cursor="Hand"
                                        ToolTip="Browse for image file"/>
                            </Grid>

                            <!-- Image Preview -->
                            <Label Content="Image Preview" Style="{StaticResource StandardLabel}"/>
                            <Border BorderBrush="#E5E7EB" 
                                    BorderThickness="1" 
                                    Height="140" 
                                    Background="#F9FAFB" 
                                    Margin="0,0,0,15"
                                    CornerRadius="8">
                                <Grid>
                                    <Image Source="{Binding ImagePath, Converter={StaticResource FilePathToImageConverter}, ConverterParameter=120}" 
                                           Stretch="Uniform" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           MaxHeight="120"
                                           MaxWidth="120"/>
                                    <!-- Show "No Image" when ImagePath is empty -->
                                    <TextBlock Text="No Image" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               Foreground="#9CA3AF"
                                               FontStyle="Italic">
                                        <TextBlock.Visibility>
                                            <Binding Path="ImagePath">
                                                <Binding.Converter>
                                                    <converters:StringToVisibilityConverter/>
                                                </Binding.Converter>
                                                <Binding.ConverterParameter>Inverse</Binding.ConverterParameter>
                                            </Binding>
                                        </TextBlock.Visibility>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <CheckBox Content="✅ Active Product" 
                                      IsChecked="{Binding IsActive}" 
                                      Style="{StaticResource StandardCheckBox}"
                                      ToolTip="Check to keep product active"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E5E7EB" 
                BorderThickness="0,1,0,0" 
                Padding="0,24,0,0" 
                Margin="0,32,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Validation Messages -->
                <StackPanel Grid.Column="0" 
                            VerticalAlignment="Center"
                            Visibility="{Binding HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="⚠️ Please fix the following errors:" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               Foreground="#EF4444" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding ValidationMessage}" 
                               Foreground="#DC2626" 
                               FontSize="13"
                               TextWrapping="Wrap"
                               MaxWidth="400"/>
                </StackPanel>

                <!-- Action Buttons -->
                <Button Grid.Column="1" 
                        Content="💾 Save Changes" 
                        Click="SaveButton_Click" 
                        Style="{StaticResource ActionButton}" 
                        Background="#10B981" 
                        Foreground="White"
                        IsEnabled="{Binding CanSave}"
                        ToolTip="Save all changes to the product"/>

                <Button Grid.Column="2" 
                        Content="❌ Cancel" 
                        Click="CancelButton_Click" 
                        Style="{StaticResource ActionButton}" 
                        Background="#6B7280" 
                        Foreground="White"
                        ToolTip="Cancel editing and close window"/>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" 
                Grid.RowSpan="3" 
                Background="#80000000"
                Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}"
                CornerRadius="8">
            <Border Background="White" 
                    CornerRadius="12"
                    Padding="32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                      Direction="270" 
                                      ShadowDepth="4" 
                                      BlurRadius="16" 
                                      Opacity="0.2"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="240" 
                                 Height="8" 
                                 Margin="0,0,0,20"/>
                    <TextBlock Text="💾 Saving product changes..." 
                              HorizontalAlignment="Center" 
                              Foreground="#374151" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              FontFamily="Segoe UI"/>
                    <TextBlock Text="Please wait while we update the product information" 
                              HorizontalAlignment="Center" 
                              Foreground="#6B7280" 
                              FontSize="14"
                              FontFamily="Segoe UI"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>