<!-- Path: QuickTechSystems.WPF.Views/ProductEditWindow.xaml -->
<Window x:Class="QuickTechSystems.WPF.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:QuickTechSystems.WPF.Converters"
        mc:Ignorable="d"
        Title="Edit Product"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>

        <!-- Style for validation errors -->
        <Style x:Key="ValidatedTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ValidatedComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label style -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>

        <!-- Section header style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Basic Information Section -->
                <TextBlock Text="Basic Information" Style="{StaticResource SectionHeader}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Product Name *" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.Name, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Description" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.Description, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Category *" Style="{StaticResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding Categories}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="CategoryId"
                                  SelectedValue="{Binding EditableProduct.CategoryId, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{StaticResource ValidatedComboBox}"
                                  IsEnabled="{Binding IsNotSaving}"
                                  SelectionChanged="OnCategorySelectionChanged"/>

                        <TextBlock Text="Supplier" Style="{StaticResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding Suppliers}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="SupplierId"
                                  SelectedValue="{Binding EditableProduct.SupplierId, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{StaticResource ValidatedComboBox}"
                                  IsEnabled="{Binding IsNotSaving}"
                                  SelectionChanged="OnSupplierSelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="Speed Category" Style="{StaticResource FieldLabel}"/>
                        <ComboBox SelectedValue="{Binding EditableProduct.Speed, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{StaticResource ValidatedComboBox}"
                                  IsEnabled="{Binding IsNotSaving}"
                                  IsEditable="True">
                            <ComboBoxItem Content="Fast Moving"/>
                            <ComboBoxItem Content="Medium Moving"/>
                            <ComboBoxItem Content="Slow Moving"/>
                            <ComboBoxItem Content="Non Moving"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Item Barcode *" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.Barcode, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Box Barcode" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.BoxBarcode, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Image Path" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.ImagePath, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <CheckBox Content="Active Product"
                                  IsChecked="{Binding EditableProduct.IsActive, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,10,0,0"
                                  IsEnabled="{Binding IsNotSaving}"/>
                    </StackPanel>
                </Grid>

                <!-- Pricing Information Section -->
                <TextBlock Text="Pricing Information" Style="{StaticResource SectionHeader}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Individual Item Prices -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Individual Item Prices" FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="Purchase Price" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.PurchasePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Wholesale Price" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.WholesalePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Sale Price" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.SalePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>
                    </StackPanel>

                    <!-- Box Configuration -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Box Configuration" FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="Items Per Box *" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.ItemsPerBox, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Number of Boxes" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.NumberOfBoxes, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Minimum Box Stock" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.MinimumBoxStock, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>
                    </StackPanel>

                    <!-- Box Prices -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Box Prices" FontWeight="Bold" Margin="0,0,0,10"/>

                        <TextBlock Text="Box Purchase Price" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.BoxPurchasePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Box Wholesale Price" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.BoxWholesalePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Box Sale Price" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.BoxSalePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>
                    </StackPanel>
                </Grid>

                <!-- Stock Information Section -->
                <TextBlock Text="Stock Information" Style="{StaticResource SectionHeader}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Current Stock" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.CurrentStock, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>

                        <TextBlock Text="Minimum Stock Level" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding EditableProduct.MinimumStock, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ValidatedTextBox}"
                                 IsEnabled="{Binding IsNotSaving}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <!-- Stock Summary Display -->
                        <TextBlock Text="Stock Summary" FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Total Individual Items: " FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding EditableProduct.CurrentStock}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Complete Boxes: " FontWeight="SemiBold"/>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:N0}">
                                        <Binding Path="EditableProduct.CurrentStock"/>
                                        <Binding Path="EditableProduct.ItemsPerBox"/>
                                        <Binding Converter="{StaticResource MultiValueStockToBoxesConverter}"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Message Area -->
        <Border Grid.Row="1" 
                Background="#F5F5F5" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#E0E0E0"
                Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"
                Padding="20,10">
            <TextBlock Text="{Binding StatusMessage}" 
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Button Panel -->
        <Border Grid.Row="2" 
                Background="#F9F9F9" 
                BorderThickness="0,1,0,0" 
                BorderBrush="#E0E0E0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">

                <Button Content="Reset"
                        Command="{Binding ResetCommand}"
                        Width="80"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#FFC107"
                        Foreground="White"
                        BorderThickness="0"
                        IsEnabled="{Binding IsNotSaving}"/>

                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Width="80"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#6C757D"
                        Foreground="White"
                        BorderThickness="0"
                        IsCancel="True"
                        IsEnabled="{Binding IsNotSaving}"/>

                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        Width="80"
                        Height="35"
                        Background="#28A745"
                        Foreground="White"
                        BorderThickness="0"
                        IsDefault="True"
                        IsEnabled="{Binding CanSave}"/>
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" 
                Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="20"
                             Margin="0,0,0,15"/>
                <TextBlock Text="{Binding StatusMessage}"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>