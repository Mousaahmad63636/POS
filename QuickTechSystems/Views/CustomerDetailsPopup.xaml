<!-- Path: QuickTechSystems.WPF.Views/CustomerDetailsPopup.xaml -->
<UserControl x:Class="QuickTechSystems.WPF.Views.CustomerDetailsPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuickTechSystems.WPF.Views"
             mc:Ignorable="d"
             Width="600" Height="450">

    <Grid Background="#80000000">
        <Border Background="White"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                CornerRadius="8"
                Width="600" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource MediumShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" 
                        Background="#007BFF" 
                        CornerRadius="8,8,0,0">
                    <Grid Margin="24,16">
                        <TextBlock Text="{Binding IsNewCustomer, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter='Add New Customer|Edit Customer'}" 
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"/>

                        <Button Content="✕"
                                Click="CloseButton_Click"
                                Style="{StaticResource LightIconButtonStyle}"
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                ToolTip="Close"/>
                    </Grid>
                </Border>

                <!-- Content -->
                <ScrollViewer Grid.Row="1"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="24,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Customer Name -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,16">
                            <TextBlock Text="Customer Name" 
                                     Margin="0,0,0,4"
                                     FontWeight="SemiBold"/>
                            <TextBox Text="{Binding SelectedCustomer.Name, UpdateSourceTrigger=PropertyChanged}"
                                   Padding="10"
                                   BorderBrush="#CCCCCC"
                                   BorderThickness="1"/>
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,16">
                            <TextBlock Text="Phone Number" 
                                     Margin="0,0,0,4"
                                     FontWeight="SemiBold"/>
                            <TextBox Text="{Binding SelectedCustomer.Phone, UpdateSourceTrigger=PropertyChanged}"
                                   Padding="10"
                                   BorderBrush="#CCCCCC"
                                   BorderThickness="1"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,16">
                            <TextBlock Text="Email Address" 
                                     Margin="0,0,0,4"
                                     FontWeight="SemiBold"/>
                            <TextBox Text="{Binding SelectedCustomer.Email, UpdateSourceTrigger=PropertyChanged}"
                                   Padding="10"
                                   BorderBrush="#CCCCCC"
                                   BorderThickness="1"/>
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Margin="8,0,0,16">
                            <TextBlock Text="Address" 
                                     Margin="0,0,0,4"
                                     FontWeight="SemiBold"/>
                            <TextBox Text="{Binding SelectedCustomer.Address, UpdateSourceTrigger=PropertyChanged}"
                                   Padding="10"
                                   BorderBrush="#CCCCCC"
                                   BorderThickness="1"/>
                        </StackPanel>

                        <!-- Balance -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,16">
                            <TextBlock Text="Balance" 
             Margin="0,0,0,4"
             FontWeight="SemiBold"/>
                            <TextBox Text="{Binding SelectedCustomer.Balance, UpdateSourceTrigger=PropertyChanged}"
           Padding="10"
           BorderBrush="#CCCCCC"
           BorderThickness="1"/>
                        </StackPanel>

                        <!-- Active -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,16" VerticalAlignment="Center">
                            <CheckBox Content="Is Active" 
                                    IsChecked="{Binding SelectedCustomer.IsActive}"
                                    Margin="0,20,0,0"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- Footer -->
                <Border Grid.Row="2"
                        Background="#F5F5F5"
                        BorderBrush="#DDDDDD"
                        BorderThickness="0,1,0,0">
                    <Grid Margin="24,16">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel"
                                   Click="CloseButton_Click"
                                   Margin="0,0,8,0"
                                   Padding="16,8"
                                   Width="100"
                                   Background="Transparent"
                                   BorderBrush="#6C757D"
                                   BorderThickness="1"
                                   Foreground="#6C757D">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#6C757D"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Save"
                                   Command="{Binding SaveCommand}"
                                   Click="SaveButton_Click"
                                   Padding="16,8"
                                   Width="100"
                                   Background="#4CAF50"
                                   BorderThickness="0"
                                   Foreground="White">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#388E3C"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>